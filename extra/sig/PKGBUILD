# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>

pkgname=sig
pkgver=0.2.0
pkgrel=1
pkgdesc="Interactive grep for streaming"
arch=('x86_64')
url="https://github.com/ynqa/sig"
license=('MIT')
depends=('gcc-libs')
makedepends=('cargo')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('91a0cc237e02636067000915b18fc4541eec847e6c86f57fa362aa65e179f177a82c8b7df2d70f654cfc6861bd83f55f6f24a6bf8a7a8090fa5afba27ab62b08')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname"
}

# vim: ts=2 sw=2 et:
