# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>

pkgname=sig
pkgver=0.1.4
pkgrel=1
pkgdesc="Interactive grep for streaming"
arch=('x86_64')
url="https://github.com/ynqa/sig"
license=('MIT')
depends=('gcc-libs')
makedepends=('cargo')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('d21e85e4d4a1cca02774a9a80dac835c2a88411c5f361396fff7a60dce3640d4a9f6a54165f3c3a8147bdb75d125b0e02cc9a0d797f7f98124e8166338de2865')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname"
}

# vim: ts=2 sw=2 et:
