# Maintainer: Jakub Klinkovsk√Ω <lahwaacz at archlinux dot org>

pkgname=python-kubernetes-validate
_name="${pkgname#python-}"
pkgver=1.35.0
pkgrel=1
license=(Apache-2.0)
pkgdesc="Validate Kubernetes resource definitions against the declared Kubernetes schemas"
arch=(any)
url="https://github.com/willthames/kubernetes-validate"
depends=(
  python
  python-importlib-resources
  python-jsonschema
  python-packaging
  python-referencing
  python-typing_extensions
  python-yaml
)
makedepends=(
  python-build
  python-installer
  python-wheel
  python-setuptools
)
checkdepends=(
  python-pytest
)
source=("$_name-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz")
b2sums=('81d8053b7120d22de19ffafe93e468510a71b127e6adc8ec8fd3fcad7017775c29fe67a6e2f1aa8962e00bdd0220d73c96bb3e3bac95b486befaa005c4b8ba51')

build() {
  cd $_name-$pkgver
  python -m build --wheel --no-isolation
}

check() {
  cd $_name-$pkgver
  PYTHONPATH="$PWD/build/lib" pytest
}

package() {
  cd $_name-$pkgver
  python -m installer --destdir="$pkgdir" dist/*.whl
  install -vDm 644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname/"
}
