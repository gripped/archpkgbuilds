# Maintainer: Daniel M. Capella <polyzen@archlinux.org>
# Maintainer: Caleb Maclennan <caleb@alerque.com>

pkgname=selene
pkgver=0.26.1
pkgrel=2
pkgdesc='Blazing-fast modern Lua linter written in Rust'
arch=('x86_64')
url=https://github.com/Kampfkarren/selene
license=('MPL-2.0')
depends=('gcc-libs' 'glibc' 'openssl')
makedepends=('cargo' 'git')
conflicts=("$pkgname-linter")
replaces=("$pkgname-linter")
options=('!lto')
source=("git+$url.git#tag=$pkgver")
sha256sums=('8be41da0ee68dfc3d4a464b7ecb248984a39b72b0c05b11ffa62e6a1421f7e69')

prepare() {
  cd $pkgname
  cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd $pkgname
  cargo build --release --locked --offline
}

check() {
  cd $pkgname
  cargo test --locked --offline
}

package() {
  cd $pkgname
  install -Dt "$pkgdir"/usr/bin target/release/$pkgname
}

# vim:set ts=2 sw=2 et:
