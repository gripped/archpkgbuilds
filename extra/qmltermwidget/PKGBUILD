pkgname=qmltermwidget
_commit=ce8e09a
pkgrel=1
pkgver=2.0.0.git1
pkgdesc='QML port of qtermwidget'
arch=('x86_64')
url='https://github.com/Swordfish90/qmltermwidget'
license=('GPL-2.0-only')
depends=('qt6-declarative')
makedepends=('git')
source=("git+https://github.com/Swordfish90/qmltermwidget.git#commit=$_commit")
sha512sums=('78f2bee3619d09fc7a888ccd91237421bce044006f7b8b05f61d21f7550421f6ef01e3b3a6f8825f39a2149bd4d1338ab83883d45a8a22f3273f8080d8524721')

build() {
  cd $pkgname

  qmake6
  make
}

package() {
  cd $pkgname

  make INSTALL_ROOT="$pkgdir" install -j1
}
