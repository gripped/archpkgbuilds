  jsoncpp libjsoncpp.so
  libglvnd libGLX.so libOpenGL.so
  libjpeg-turbo
  liblas
  libogg libogg.so
  libpng libpng16.so
  libtheora
  libtiff libtiff.so
  libx11
  libxcursor
  libxslt # xsltproc executable
  libxml2 libxml2.so
  lz4 liblz4.so
  netcdf
  onetbb
  openmpi libmpi.so
  ospray
  paraview-catalyst
  pdal
  proj
  protobuf libprotobuf.so
  pugixml
  python
  python-mpi4py
  python-numpy
  qt6-5compat
  qt6-base
  qt6-svg # for showing icons in the UI
  qt6-tools
  verdict
  viskores
  xz liblzma.so
