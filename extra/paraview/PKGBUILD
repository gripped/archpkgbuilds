pkgver=6.0.0
pkgrel=3
pkgdesc="Parallel Visualization application using VTK"
arch=(x86_64)
url="https://www.paraview.org"
license=(BSD-3-Clause)
depends=(
  adios2
  cgns
  double-conversion
  expat libexpat.so
