depends=('bash' 'grep' 'coreutils' 'sed' 'gzip')
optdepends=('cryptsetup: for encrypt mkinitcpio config support'
            'lvm2:       for lvm2 mkinitcpio config support'
            'mdadm:      for raid mkinitcpio config support')
source=(hwdetect)
