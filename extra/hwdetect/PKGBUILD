license=('GPL-3.0-or-later')
depends=('bash' 'coreutils' 'fd' 'gzip' 'ripgrep' 'sd')
optdepends=('cryptsetup: for encrypt mkinitcpio config support'
            'lvm2:       for lvm2 mkinitcpio config support'
            'mdadm:      for raid mkinitcpio config support')
source=(hwdetect)
b2sums=('5a24a671cafb0ecad222ffd8241f3f9701b210d03be1f66760acaead3970eea547c5cfdd1980f0bb185255f266b253fb0b52dd9130ddaf354ecbc6c99bcbfa2c')

package() {
  install -D -m 755 "${srcdir}/hwdetect" "${pkgdir}/usr/bin/hwdetect"
}
