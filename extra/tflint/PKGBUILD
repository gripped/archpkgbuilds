# Maintainer: Andreas 'Segaja' Schleifer <segaja at archlinux dot org>
# Contributor: Gabriel M. Dutra <nulldutra@proton.me>

pkgname=tflint
pkgver=0.61.0
pkgrel=1
pkgdesc="A linter for Terraform code"
arch=('x86_64')
url="https://github.com/terraform-linters/tflint"
license=('MPL-2.0')
depends=(
  glibc
)
makedepends=(
  git
  go
)
options=(!lto)
source=(
  "${pkgname}-${pkgver}::git+${url}#tag=v${pkgver}"
  "git+https://github.com/hashicorp/terraform-aws-consul.git"
  "git+https://github.com/terraform-aws-modules/terraform-aws-ec2-instance.git"
)
sha512sums=('23d0dac63ac4b83eddc2e2b79af5d8d6cd8c88ce645c09682ba05a66da3e5448768dacc797a85d76a7748cdd0d836e84984b4cfef633c913f22595c7cb9754e5'
            'SKIP'
            'SKIP')
b2sums=('1b4de8d837ed091a33e32b03ebf4b8d867c18812cdeaf5522701353fbdaad318cd9d2f2c5c9b51eb331bcc90a243d23928f0dd992ce7e5097ca2e8d5ef31ecd2'
        'SKIP'
        'SKIP')

prepare() {
  cd "${pkgname}-${pkgver}"

  git submodule init
  git config submodule.terraform/test-fixtures/v0.15.0_module/.terraform/modules/consul.url "${srcdir}/terraform-aws-consul"
  git config submodule.integrationtest/inspection/with_module_init/.terraform/modules/remote.url "${srcdir}/terraform-aws-ec2-instance"
  git -c protocol.file.allow=always submodule update

  GOFLAGS="-mod=readonly" go mod vendor -v
}

build() {
  cd "${pkgname}-${pkgver}"

  export CGO_CPPFLAGS="${CPPFLAGS}"
  export CGO_CFLAGS="${CFLAGS}"
  export CGO_CXXFLAGS="${CXXFLAGS}"
  export CGO_LDFLAGS="${LDFLAGS}"
  export GOFLAGS="-buildmode=pie -mod=vendor -modcacherw"
  export GOPATH="$srcdir"

  local ld_flags=" \
    -compressdwarf=false \
    -linkmode=external \
  "

  go build -ldflags "$ld_flags" -v -o "./out/${pkgname}"
}

check() {
  cd "${pkgname}-${pkgver}"

  export PATH="$(pwd)/out:$PATH"

  go run ./plugin/stub-generator
  go test ./...
}

package() {
  cd "${pkgname}-${pkgver}"

  install --verbose -D --mode=0755 "out/${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
}
