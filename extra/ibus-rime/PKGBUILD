pkgname=ibus-rime
pkgver=1.5.1
pkgrel=1
pkgdesc="Rime input method engine for ibus"
arch=('x86_64')
url="https://rime.im"
license=('GPL-3.0-or-later')
depends=('ibus' 'libnotify' 'librime')
makedepends=('git' 'cmake')
install='ibus-rime.install'
source=("git+https://github.com/lotem/ibus-rime.git#tag=$pkgver")
sha512sums=('15cd8dbd397c6532e523e2f552b7c9d9fd02b13b664c18ed41c335b657d424e88895cdf6b93863bfede430c9f8c4eb47a8ebb681754e25d7bfcd1e19037c8f1b')

build() {
  cd $pkgname
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}
