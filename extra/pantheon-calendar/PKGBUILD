# Maintainer: Maxime Gauduin <alucryd@archlinux.org>

pkgname=pantheon-calendar
pkgver=8.0.1
pkgrel=1
pkgdesc='The Pantheon Calendar'
arch=(x86_64)
url=https://github.com/elementary/calendar
license=(GPL-3.0-only)
groups=(pantheon)
depends=(
  clutter
  clutter-gtk
  dconf
  evolution-data-server
  folks
  gdk-pixbuf2
  geoclue
  geocode-glib-2
  glib2
  glibc
  gtk3
  hicolor-icon-theme
  libchamplain
  libfolks.so
  libgee
  libgranite.so
  libhandy-1.so
  libical
  libportal
  libportal-gtk3
)
makedepends=(
  cmake
  git
  intltool
  meson
  vala
)
_tag=e7e03d69c4388c28685d4ea03a736b9fe701dfcd
source=(pantheon-calendar::git+https://github.com/elementary/calendar.git#tag=${_tag})
sha256sums=('fdaaa06bf25d2e77fbfce2510311d44bc6b6ebc9a382379cfdc0ca3f4a362c76')

pkgver() {
  cd pantheon-calendar
  git describe --tags
}

build() {
  arch-meson pantheon-calendar build
  meson compile -C build
}

package() {
  meson install -C build --destdir "${pkgdir}"
}

