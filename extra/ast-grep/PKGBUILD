pkgbase=ast-grep
pkgname=(
  ast-grep
  python-ast-grep
)
pkgver=0.40.3
pkgrel=1
pkgdesc='CLI tool for code structural search, lint and rewriting'
url='https://ast-grep.github.io/'
arch=(x86_64)
license=(MIT)
depends=(
  gcc-libs
  glibc
)
makedepends=(
  cargo
  python-build
  python-installer
  python-maturin
  python-wheel
)
options=(!lto)
source=(https://github.com/ast-grep/ast-grep/archive/${pkgver}/${pkgbase}-${pkgver}.tar.gz)
sha512sums=('3a903b57f0052959c2fa6281566950847d61a2fb6eb4774b3561a7846bd60f3784926a21d508c2948a561d346b1a3d0c468d9e73137e9855c38bb3dfd0ee104e')
b2sums=('d915487c402ebc53700ada9e4e2bd41f35ed414e2b9a99ec591f5fbcd200f3fb5c80e515a6de03d5ab245395a5419a703f2fb6fd10bd09c3f767f15b13eb3ee0')

prepare() {
  cd ${pkgbase}-${pkgver}
  cargo fetch --locked --target "$(rustc --print host-tuple)"
}

build() {
  cd ${pkgbase}-${pkgver}
  cargo build --frozen --release --all-features

	local shell; for shell in bash fish zsh; do
		./target/release/ast-grep completions "${shell}" > target/ast-grep.${shell}
	done

  cd crates/pyo3
  python -m build --wheel --no-isolation
}

check() {
  cd ${pkgbase}-${pkgver}
  cargo test --frozen --all-features --workspace
}

package_ast-grep() {
  depends=(
    gcc-libs
    glibc
  )

  cd ${pkgbase}-${pkgver}
  install -Dm 755 target/release/ast-grep -t "${pkgdir}/usr/bin/"
  install -Dm 644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
  install -Dm 644 README.md -t "${pkgdir}/usr/share/doc/${pkgname}"

	install -Dm 644 target/${pkgname}.bash "${pkgdir}"/usr/share/bash-completion/completions/${pkgname}
	install -Dm 644 target/${pkgname}.fish "${pkgdir}"/usr/share/fish/vendor_completions.d/${pkgname}.fish
	install -Dm 644 target/${pkgname}.zsh "${pkgdir}"/usr/share/zsh/site-functions/_${pkgname}
}

package_python-ast-grep() {
  depends=(
    gcc-libs
    glibc
    python
  )

  cd ${pkgbase}-${pkgver}
  install -Dm 644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
  cd crates/pyo3
  python -m installer --destdir="${pkgdir}" dist/*.whl
}

