# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=deepin-clipboard
pkgver=6.0.13
pkgrel=1
pkgdesc='DDE clipboard manager component'
arch=('x86_64')
url="https://github.com/linuxdeepin/dde-clipboard"
license=('GPL3')
depends=('deepin-qt5integration' 'gio-qt' 'dtkcore' 'dwayland')
makedepends=('git' 'cmake' 'ninja' 'gtest' 'qt5-tools' 'extra-cmake-modules')
groups=('deepin-extra')
source=("git+https://github.com/linuxdeepin/dde-clipboard.git#tag=$pkgver")
sha512sums=('7e8673e9d4182fda3156debf5aeacfb81e322f4d1d93cfed8d2e93895a942838f2786989dc7f35f73c3ba404f21692e159c6f7b1462b62f2a879e7287b1dd0eb')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake -GNinja ../dde-clipboard
  ninja
}

package() {
  cd build
  DESTDIR="$pkgdir" ninja install
}
