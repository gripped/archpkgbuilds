# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=deepin-clipboard
pkgver=6.0.12
pkgrel=1
pkgdesc='DDE clipboard manager component'
arch=('x86_64')
url="https://github.com/linuxdeepin/dde-clipboard"
license=('GPL3')
depends=('deepin-qt5integration' 'gio-qt' 'dtkcore' 'dwayland')
makedepends=('git' 'cmake' 'ninja' 'gtest' 'qt5-tools' 'extra-cmake-modules')
groups=('deepin-extra')
source=("git+https://github.com/linuxdeepin/dde-clipboard.git#tag=$pkgver")
sha512sums=('3f5e5a3b2b20f29b425fb31bddb4b54c553a14264112c2b3b93b5d5bd50266c7406f095ab0165e1536d84fe28c39444dc7f21a51763a40770d6ebe02424350db')

prepare() {
  mkdir -p build
}

build() {
  cd build
  cmake -GNinja ../dde-clipboard
  ninja
}

package() {
  cd build
  DESTDIR="$pkgdir" ninja install
}
