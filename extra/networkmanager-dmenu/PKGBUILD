# Maintainer: Giovanni Harting <anonfunc@archlinux.org>
# Contributor: Scott Hansen (firecat53) tech at firecat53 dot net

pkgname=networkmanager-dmenu
pkgver=2.6.2
pkgrel=1
pkgdesc='Control Networkmanager via dmenu'
arch=(any)
url="https://github.com/firecat53/$pkgname"
license=(MIT)
depends=(python glib2 libnm networkmanager python-gobject)
makedepends=(git)
optdepends=(
  'nm-connection-editor: for connection manager GUI'
  'libnotify: recieve notifications'
)
source=("git+https://github.com/firecat53/$pkgname.git#tag=v$pkgver")
b2sums=('e1ccbf11f4d200c5bd595cfc3c36e1bf5094025e9c993a7421865d5e0c789f39f6b36b0ea6a0e2069e245dfa72e34e4b2c9ac16dff6841b2249645db7207aa6b')

package() {
  install -Dm755 $pkgname/networkmanager_dmenu "$pkgdir"/usr/bin/networkmanager_dmenu
  install -Dm644 $pkgname/LICENSE.txt "$pkgdir"/usr/share/licenses/$pkgname/LICENSE
  install -Dm644 $pkgname/README.md "$pkgdir"/usr/share/doc/$pkgname/README.md
  install -Dm644 $pkgname/config.ini.example "$pkgdir"/usr/share/doc/$pkgname/config.ini.example
  install -Dm644 $pkgname/networkmanager_dmenu.desktop "$pkgdir"/usr/share/applications/networkmanager_dmenu.desktop
}

