pkgname=sugar-activity-log
_pkgname=log-activity
pkgver=42
pkgrel=5
pkgdesc='Sugar activity to view system log files'
arch=(any)
url='https://github.com/sugarlabs/log-activity'
license=(GPL-2.0-or-later)
groups=(sugar-fructose)
depends=(
  glib2
  gtk3
  pango
  python
  python-gobject
  sugar-toolkit-gtk3
)
makedepends=(git)
source=("git+https://github.com/sugarlabs/$_pkgname.git#tag=v$pkgver")
b2sums=(d8ef1d6c0010b00d96c4f0110edce05ad98c2d077173a44bf342984c384adf0524038e1032261b202d4085427bea38b352caa640f4432da031f7b01a40c1860c)

package() {
  cd $_pkgname
  python setup.py install --prefix "$pkgdir/usr" --skip-install-desktop-file
}
