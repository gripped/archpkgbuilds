pkgname=llm-manager
pkgver=1.2.0
pkgrel=1
pkgdesc='LLM task->model configuration utility'
arch=(any)
url='https://github.com/xyproto/llm-manager'
license=(BSD-3-Clause)
makedepends=(git)
depends=(python)
backup=(etc/llm.conf)
source=("git+$url#tag=v$pkgver")
b2sums=('f3b2f320d793748076e8689d88b5bfc549cac0d63a21b8db76a523771f7129eb9ef4d5281a684bfd6e99ddd60b8e431416eaeb7da745b2156d2da75179b2cef6')

package() {
  cd $pkgname
  install -Dm755 main.py "$pkgdir/usr/bin/$pkgname"
  install -Dm644 llm.conf "$pkgdir/etc/llm.conf"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
