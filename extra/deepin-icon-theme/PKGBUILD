pkgname=deepin-icon-theme
pkgver=2025.9.11
pkgrel=1
pkgdesc="Deepin Icons"
arch=('any')
url="https://github.com/linuxdeepin/deepin-icon-theme"
license=('GPL-3.0-or-later')
optdepends=('papirus-icon-theme: fallback icon theme')
makedepends=('git')
replaces=('deepin-cursor-theme')
conflicts=('deepin-cursor-theme')
groups=('deepin')
source=("git+https://github.com/linuxdeepin/deepin-icon-theme.git#tag=$pkgver")
sha512sums=('bb186f543ec696961339a90541e2ccecbe8a6deacbfd227df823ce6689d3412c87468483903873b3c8d1c3963afca5062c47046c832b604e542fca9aa8a20acf')

build() {
  cd $pkgname
  make hicolor-links
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install

  cp -a ./Sea ./usr/share/icons/hicolor "$pkgdir"/usr/share/icons/
}
