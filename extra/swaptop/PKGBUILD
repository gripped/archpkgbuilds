# Maintainer: kpcyrd <kpcyrd[at]archlinux[dot]org>

pkgname=swaptop
pkgver=1.0.3
pkgrel=1
pkgdesc='Swap usage monitor'
url='https://github.com/luis-ota/swaptop'
arch=('x86_64')
license=('MIT')
depends=(
  'gcc-libs'
  'glibc'
)
makedepends=(
  'cargo'
)
source=(https://github.com/luis-ota/${pkgname}/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz)
sha256sums=('a082bd10f1a40800952874b76ffbb1905d0991756c504b503aa54eb93500e5f5')
b2sums=('9e1f7f514cf3d39349d54ce3ef0a205cf78f3a16840771e50d6098284eb3c90a2dc649a4bac21237095293fe051886955050ff7ac731f73771ae356e23b20141')

prepare() {
  cd "${pkgname}-${pkgver}"
  cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd "${pkgname}-${pkgver}"
  cargo build --frozen --release
}

check() {
  cd "${pkgname}-${pkgver}"
  cargo test --frozen
}

package() {
  cd "${pkgname}-${pkgver}"

  install -Dm 755 -t "${pkgdir}/usr/bin" \
    target/release/swaptop

  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}

# vim: ts=2 sw=2 et:
