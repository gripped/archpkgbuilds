# Maintainer: kpcyrd <kpcyrd[at]archlinux[dot]org>
# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>

pkgname=swaptop
pkgver=1.0.5
pkgrel=1
pkgdesc='Swap usage monitor'
url='https://github.com/luis-ota/swaptop'
arch=('x86_64')
license=('MIT')
depends=(
  'gcc-libs'
  'glibc'
)
makedepends=(
  'cargo'
)
source=(https://github.com/luis-ota/${pkgname}/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz)
sha256sums=('20bcd3b83e7fe29100771d4adc932cec9c8c14e1361be7c7608d70ba515af80f')
b2sums=('0142cf673745c5f2993a326d77ecd74d28d70e58ec761d5358636536bb95ef0650b2e2dd23b8149de01354a690d4453905f3878a2a20fe11272a4fbf5409e0ec')

prepare() {
  cd "${pkgname}-${pkgver}"
  cargo fetch --locked --target "$(rustc --print host-tuple)"
}

build() {
  cd "${pkgname}-${pkgver}"
  cargo build --frozen --release
}

check() {
  cd "${pkgname}-${pkgver}"
  cargo test --frozen
}

package() {
  cd "${pkgname}-${pkgver}"

  install -Dm 755 -t "${pkgdir}/usr/bin" \
    target/release/swaptop

  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}

# vim: ts=2 sw=2 et:
