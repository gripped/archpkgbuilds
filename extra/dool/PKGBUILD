pkgname=dool
pkgver=1.3.6
pkgrel=1
pkgdesc="A versatile resource statistics tool"
arch=('any')
url="https://github.com/scottchiefbaker/dool"
license=('GPL-3.0-only')
depends=('python')
replaces=('dstat')
source=("$pkgname-$pkgver.tar.gz::https://github.com/scottchiefbaker/dool/archive/refs/tags/v${pkgver}.tar.gz")
sha512sums=('0b7f16aa6dde86a1d7e1fdf8d9bbb0d8bea97c7dda724efb680c55ddd8045db2bc79264f1d34ec54457bd8f9d7afc5c6cfda846c21826cb2bc19dc18a2136b4c')

package() {
  cd $pkgname-$pkgver

  make DESTDIR="$pkgdir" install
  make DESTDIR="$pkgdir" docs
}
