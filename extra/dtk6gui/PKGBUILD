# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=dtk6gui
pkgver=6.0.3
pkgrel=1
epoch=1
pkgdesc='Deepin Toolkit, gui module for DDE look and feel'
arch=('x86_64')
url="https://github.com/linuxdeepin/dtk6gui"
license=('LGPL3')
# 'libqtxdg' disabled until it supports Qt6
depends=('glibc' 'dtk6core' 'freeimage' 'libraw' 'librsvg' 'qt6-base' 'glib2' 'libx11' 'gcc-libs')
makedepends=('cmake' 'ninja' 'qt6-tools' 'gtest' 'doxygen')
source=("https://github.com/linuxdeepin/dtk6gui/archive/$pkgver/$pkgname-$pkgver.tar.gz")
sha512sums=('5fd067fcd74405e06efdcecbd1e58f7478b3ef4e8b55cb0fa76538b847e5aa9f7c64fc8789952ec0a3eaa45e5c96b0d92966432f02e644857090845a049d5dc4')

build() {
  cd dtk6gui-$pkgver
  cmake . -GNinja \
    -DBUILD_DOCS=ON \
    -DBUILD_TESTING=ON \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DDTK_VERSION=$pkgver
  ninja
}

check() {
  cd dtk6gui-$pkgver
  # TODO
  ninja test || echo "Tests failed"
}

package() {
  cd dtk6gui-$pkgver
  DESTDIR="$pkgdir" ninja install
}
