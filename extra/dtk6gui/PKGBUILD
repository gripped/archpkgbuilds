# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=dtk6gui
pkgver=6.0.5
pkgrel=1
epoch=1
pkgdesc='Deepin Toolkit, gui module for DDE look and feel'
arch=('x86_64')
url="https://github.com/linuxdeepin/dtk6gui"
license=('LGPL3')
# 'libqtxdg' disabled until it supports Qt6
depends=('glibc' 'dtk6core' 'freeimage' 'libraw' 'librsvg' 'qt6-base' 'glib2' 'libx11' 'gcc-libs')
makedepends=('cmake' 'ninja' 'qt6-tools' 'gtest' 'doxygen')
source=("https://github.com/linuxdeepin/dtk6gui/archive/$pkgver/$pkgname-$pkgver.tar.gz")
sha512sums=('47abf01a0cfa4836d1570ff93bf64645dd9a4501021547b8b0088d0773afc82958d36f8af42847071f05969ed7e142019e122a9185c7fc327de37ef504dd9f98')

build() {
  cd dtk6gui-$pkgver
  cmake . -GNinja \
    -DBUILD_DOCS=ON \
    -DBUILD_TESTING=ON \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DCMAKE_INSTALL_LIBDIR=lib \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DDTK_VERSION=$pkgver
  ninja
}

check() {
  cd dtk6gui-$pkgver
  # TODO
  ninja test || echo "Tests failed"
}

package() {
  cd dtk6gui-$pkgver
  DESTDIR="$pkgdir" ninja install
}
