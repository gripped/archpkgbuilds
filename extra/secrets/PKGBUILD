# Maintainer: Fabian Bornschein <fabiscafe@archlinux.org>
# Contibutor: Balló György <ballogyor+arch at gmail dot com>

pkgname=secrets
pkgver=12.0
pkgrel=1
pkgdesc="Password manager for GNOME which makes use of the KeePass v.4 format"
url="https://apps.gnome.org/Secrets"
arch=(any)
license=('GPL-3.0-only')
groups=(gnome-circle)
depends=(
  dconf
  glib2
  graphene
  gtk4
  gtksourceview5
  hicolor-icon-theme
  libadwaita
  python
  python-gobject
  python-pycryptodomex
  python-pyhibp
  python-pykcs11
  python-pykeepass
  python-pyotp
  python-pyusb
  python-requests
  python-validators
  python-yubico
  python-zxcvbn-rs
)
makedepends=(
  git
  gobject-introspection
  meson
)
checkdepends=(python-pytest)
provides=(gnome-passwordsafe)
conflicts=(gnome-passwordsafe)
replaces=(gnome-passwordsafe)
source=("git+https://gitlab.gnome.org/World/secrets.git#tag=${pkgver/[a-z]/.&}")
b2sums=('ac7c896c84a3c95aebfd1ccb170f49e58d4e7255ced357869f8d3865136b8dea1da995de839be8ec0edf676685581708d21b44f2926d3d03dfd8e2b8b17e1678')

build() {
  arch-meson secrets build
  meson compile -C build
}

check() (
  export GSETTINGS_SCHEMA_DIR="$PWD/build/data"
  glib-compile-schemas "$GSETTINGS_SCHEMA_DIR"

  PYTHONPATH="$PWD/build:$PWD/secrets" \
    meson test -C build --print-errorlogs
)

package() {
  meson install -C build --destdir "$pkgdir"
}
