pkgname=cairo-dock-plug-ins
pkgver=3.6.0
pkgrel=1
pkgdesc="Plugins for Cairo-Dock"
arch=('x86_64')
url="https://github.com/Cairo-Dock/${pkgname}"
license=('GPL-3.0-or-later')
depends=(
	'cairo-dock'
	'python'
	'python-dbus'
	'python-gobject'
	'ruby'
	'cairo'
	'pango'
	'librsvg'
	'dbus-glib'
	'libxml2'
	'glib2'
	'gtk3'
	'gdk-pixbuf2'
	'alsa-lib'
	'libetpan'
	'gnome-menus'
	'gvfs'
	'libxklavier'
	'libxrandr'
	'libx11'
	'libxxf86vm'
	'upower'
	'zeitgeist'
	'libexif'
	'vte3'
	'lm_sensors'
	'curl'
	'wget'
	'libdbusmenu-glib'
	'libdbusmenu-gtk3'
	'libayatana-indicator'
	'ayatana-ido'
	'libical'
	'libpulse'
	'fftw'
	'json-c'
)
makedepends=('cmake' 'vala')
replaces=('cairo-dock-plugins')
source=("${pkgname}-${pkgver}.tar.gz::${url}/archive/${pkgver}.tar.gz")
sha256sums=('3332b3672dd38da2d894b036853b8f71d04832f7b120cf3733fc59a3ca453083')

build() {
	cmake -B build \
		-S "${pkgname}-${pkgver}" \
		-D CMAKE_BUILD_TYPE=None \
		-D CMAKE_PREFIX_PATH=/usr \
		-D WITH_VALA_SRC=yes

	cmake --build build
}

package() {
	DESTDIR="${pkgdir}" cmake --install build
}
