# Maintainer: kpcyrd <kpcyrd[at]archlinux[dot]org>

pkgname=p2pool
pkgver=3.8
_commit=837a33480e8181680d0d207ac14c39cf5b9f6b7e
pkgrel=1
pkgdesc='Decentralized pool for Monero mining'
arch=('x86_64')
license=('GPL-3.0-or-later')
url="https://github.com/SChernykh/p2pool"
depends=(
  'libcurl.so'
  'libuv'
  'libzmq.so'
)
makedepends=('cmake' 'git')
source=("${pkgname}"::"git+https://github.com/SChernykh/${pkgname}#commit=${_commit}")
b2sums=('SKIP')
options=(!lto)

prepare() {
  cd ${pkgname}
  git submodule init
  git submodule update
  mkdir -p build
}

build() {
  cd ${pkgname}/build
  cmake .. -DCMAKE_BUILD_TYPE=Release
  make -j$(nproc)
}

check() {
  cd ${pkgname}
  ./build/p2pool --help
}

package() {
  cd ${pkgname}
  install -Dm775 "build/p2pool" -t "${pkgdir}/usr/bin"
}

