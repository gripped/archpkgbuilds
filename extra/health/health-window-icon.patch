Subject: [PATCH] application: Set default window icon

This is commonly used by desktop environments on Xorg.
---
 src/core/application.rs | 2 ++
 1 file changed, 2 insertions(+)

diff --git a/src/core/application.rs b/src/core/application.rs
index 103e252a..13f1db9c 100644
--- a/src/core/application.rs
+++ b/src/core/application.rs
@@ -105,6 +105,8 @@ mod imp {
 
             self.parent_startup();
 
+            gtk::Window::set_default_icon_name(crate::config::APPLICATION_ID);
+
             if let Some(true) = gtk::Settings::default()
                 .and_then(|s| s.gtk_theme_name())
                 .map(|s| s.as_str().contains("-dark"))
