groups=(sugar-fructose)
depends=(
  gdk-pixbuf2
  glib2
  gtk3
  python
  python-cairo
  python-dbus
  python-gobject
  sugar-toolkit-gtk3
  telepathy-glib
)
makedepends=(git)
source=("git+https://github.com/sugarlabs/$_pkgname.git#tag=v$pkgver")
b2sums=(acee90b3bc080b741ca07514484eb81302cd915443fbfd22763ff874217dd0053818433f6ffd12e45c8c1c165bf0a5452b0603870314635a65e1b0ab9334397d)

package() {
  cd $_pkgname
  python setup.py install --prefix "$pkgdir/usr" --skip-install-desktop-file
}
