# Maintainer: Alexander F. RÃ¸dseth <xyproto@archlinux.org>

pkgname=fortunecraft
pkgver=1.8.0
pkgrel=1
pkgdesc='Craft fortunes using Ollama and Gemma2'
arch=(x86_64)
url='https://github.com/xyproto/fortunecraft'
license=(Apache-2.0)
depends=(llm-manager)
optdepends=('ollama-cuda: CUDA support for Ollama'
            'ollama-rocm: ROCm support for Ollama'
            'ollama-gemma2-2b: the Gemma2 (2B) model')
makedepends=(git go)
source=("git+$url#tag=v$pkgver")
b2sums=('68f213fe07c51146dffa6385823985d89dcf956a23c4959c19bd2d066455ff7635e317da6e4cdfab2d3c90cc4403da525554d65b5750bb18521b49b1933dcd24')

build() {
  cd $pkgname
  go build -buildmode=pie -trimpath -mod=readonly -modcacherw -ldflags="-s -w -linkmode=external -extldflags '$LDFLAGS'"
}

package() {
  install -Dm755 $pkgname/$pkgname "$pkgdir/usr/bin/$pkgname"
  install -Dm644 $pkgname/LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
