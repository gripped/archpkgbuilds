# Maintainer: Caleb Maclennan <caleb@alerque.com>
# Contributor: Luis Aleman Vazquez <luisv@tuta.io>

pkgname=cliphist
pkgver=0.6.0
pkgrel=1
epoch=1
pkgdesc='wayland clipboard manager'
arch=(i686 x86_64)
url="https://github.com/sentriz/$pkgname"
license=(GPL3)
depends=(glibc
         wl-clipboard)
makedepends=(go)
optdepends=('xdg-utils: image and mime inferance')
_archive="$pkgname-$pkgver"
source=("$url/archive/v$pkgver/$_archive.tar.gz")
sha256sums=('92c71183aae9afded81c514174b1f207d1e244a6cfe9e63ea921500e619b5118')

build() {
	cd "$_archive"
	export CGO_CPPFLAGS="$CPPFLAGS"
	export CGO_CFLAGS="$CFLAGS"
	export CGO_CXXFLAGS="$CXXFLAGS"
	export GOFLAGS="-buildmode=pie -trimpath -mod=readonly -modcacherw"
	go build \
		-ldflags "-linkmode external -extldflags '$LDFLAGS'" \
		-o $pkgname
}

package() {
	cd "$_archive"
	install -Dm0755 -t "$pkgdir/usr/bin/" $pkgname
}
