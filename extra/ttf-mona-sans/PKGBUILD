# Maintainer: kpcyrd <kpcyrd[at]archlinux[dot]org>

pkgname=ttf-mona-sans
pkgver=2.0.8
pkgrel=1
pkgdesc='Mona Sans, a variable font from GitHub'
url='https://github.com/github/mona-sans'
arch=(any)
license=('OFL-1.1')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/github/mona-sans/archive/refs/tags/${pkgver}.tar.gz")
sha256sums=('4e1366e20fb5c03182a6e78ec5b70540b224ed47e7527ad65a5e5c1316ea167f')
b2sums=('0012458715e9a63bc46faac827d3278ae4432ddbe8e16bbe9bcdc6f21e4f2fc5fea7f86e3fa67c5e3f47098083cf9d43ba78f8ca746bf7dc5c890edf5f1dcc2b')

package() {
  cd mona-sans-${pkgver}
  install -Dm0644 -t "${pkgdir}/usr/share/fonts/TTF" fonts/static/ttf/*.ttf
  install -Dm0644 -t "${pkgdir}/usr/share/licenses/${pkgname}" LICENSE
}

