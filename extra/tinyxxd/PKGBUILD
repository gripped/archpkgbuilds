# Maintainer: Alexander F. RÃ¸dseth <xyproto@archlinux.org>

pkgname=tinyxxd
pkgver=1.0.0
pkgrel=1
pkgdesc='Standalone and better performing version of the hex dump utility that comes with ViM'
arch=(x86_64)
url='https://github.com/xyproto/tinyxxd'
provides=(xxd)
conflicts=(xxd)
license=(GPL2)
source=("$url/releases/download/v$pkgver/$pkgname-$pkgver.tar.gz")
b2sums=('b6083b6df9a99ff0c202f8c89cd38e815f225a5fb2a649a5f90b34b7796608430adc35f936fa1016819fae229d78470155709b49ccdc4ca42f0a8792a43872a5')

build() {
  make CFLAGS="$CFLAGS -std=c18 -O2 -pipe -fPIC -fstack-protector-strong -D_GNU_SOURCE -s -Wl,-z,now" -C $pkgname-$pkgver
}

package() {
  DESTDIR="$pkgdir" make -C $pkgname-$pkgver install
  ln -s /usr/bin/tinyxxd "$pkgdir/usr/bin/xxd"
}
