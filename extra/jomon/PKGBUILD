# Maintainer: Alexander F. RÃ¸dseth <xyproto@archlinux.org>

pkgname=jomon
pkgver=0.6.3
pkgrel=1
pkgdesc='Network forensics and sniffer tool'
arch=(x86_64)
url='https://github.com/jo-lund/jomon'
license=(MIT)
depends=(geoip glibc libgcc ncurses)
makedepends=(git python re2c)
optdepends=("geoip-database-extra: for extra geolocation data")
source=("git+$url#tag=v$pkgver")
b2sums=('e13a2e314565c28be59509b39c64c865464a93e933c65777482bb2135e9f94d429f316a593649a64816a5825d3da02607224d70587f2a39685ed99165c7dee11')

build() {
  cd $pkgname
  ./configure --prefix /usr
  make CFLAGS+='-Wl,-z,now -w'
}

package() {
  cd $pkgname
  sed -i "s,X=/,X=\"$pkgdir/\",g" config.mk
  make install
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
