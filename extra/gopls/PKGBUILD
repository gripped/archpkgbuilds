# Contributor: Chad Kunde <Kunde21@gmail.com>

pkgname=gopls
pkgver=0.19.0
pkgrel=1
pkgdesc='Language server for Go programming language'
arch=('x86_64')
url='https://github.com/golang/tools/tree/master/gopls'
license=('BSD-3-Clause')
depends=('go')
makedepends=('git')
options=('!lto')
source=("${pkgname}-${pkgver}.tar.gz::https://github.com/golang/tools/archive/gopls/v${pkgver}.tar.gz")
sha512sums=('5f148d90302bde3d4ecc49db4ac0f0fcf25c8e5ec5808efe22e4420815190479ab689e3c9865837387c1f13f335a0fc78172ffac17f62dbe08e0f2036b749090')
b2sums=('cabf3c37c5e3e56aae201d636628ed19165ac734f69bbef3a2dce6b10da1a480913b4db7d42e91d26b2845a5c9c165c1c72d0f9ff32cfc981321f2a79debfa1a')

build() {
  cd "tools-${pkgname}-v${pkgver}/${pkgname}"

  # set Go flags
  export CGO_CPPFLAGS="${CPPFLAGS}"
  export CGO_CFLAGS="${CFLAGS}"
  export CGO_CXXFLAGS="${CXXFLAGS}"
  export GOPATH="${srcdir}"

  go build -v \
    -buildmode=pie \
    -mod=readonly \
    -modcacherw \
    -ldflags "-compressdwarf=false \
    -linkmode external \
    -extldflags \"${LDFLAGS}\"" \
    -o "${pkgname}"
}

package() {
  cd "tools-${pkgname}-v${pkgver}"
  install -Dm755 "${pkgname}/${pkgname}" -t "${pkgdir}"/usr/bin/
  install -Dm644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}/"
}

