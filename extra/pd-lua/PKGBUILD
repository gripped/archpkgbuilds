# Maintainer: David Runge <dvzrv@archlinux.org>

pkgname=pd-lua
pkgver=0.12.18
pkgrel=1
pkgdesc="LUA embedding for pd"
arch=(x86_64)
url="https://github.com/agraef/pd-lua"
license=(GPL-2.0-or-later)
groups=(
  pd-externals
  pro-audio
)
depends=(
  glibc
  lua
  pd
)
source=($pkgname-$pkgver.tar.gz::$url/archive/refs/tags/$pkgver.tar.gz)
sha512sums=('3849073fbd371eddbef1832d00e82bec703d99c19aefcd4ddd9d4968adaba0c864349a21f63a44d928cc94e3cb87d4888b1e69501cf945f3d2a5ece008d7c152')
b2sums=('aec72bfc9016defd159c97da5bcd9ba2cef265f1f4e2fc46400881041e9dc886b82fd93efc7f1f80e4343f66c50a7bcb16829f7dbd21543557d73a4b232829f3')

build() {
  make LDFLAGS="$LDFLAGS" CFLAGS="$CFLAGS" -C $pkgname-$pkgver
}

package() {
  make DESTDIR="$pkgdir/" PDLIBDIR=/usr/lib/pd/extra prefix=/usr install -C $pkgname-$pkgver
  install -vDm 644 $pkgname-$pkgver/README -t "$pkgdir/usr/share/doc/$pkgname/"
}
