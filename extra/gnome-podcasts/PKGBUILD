# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=gnome-podcasts
pkgver=25.3
pkgrel=1
pkgdesc='Podcast application for GNOME'
arch=(x86_64)
url='https://apps.gnome.org/Podcasts/'
license=(GPL-3.0-or-later)
groups=(gnome-circle)
depends=(
  dconf
  gcc-libs
  gdk-pixbuf2
  glib2
  glibc
  gst-plugins-bad-libs
  gst-plugins-base
  gst-plugins-base-libs
  gst-plugins-good
  gstreamer
  gtk4
  hicolor-icon-theme
  libadwaita
  openssl
  sqlite
)
makedepends=(
  appstream
  git
  meson
  rust
)
checkdepends=(xorg-server-xvfb)
source=("git+https://gitlab.gnome.org/World/podcasts.git#tag=$pkgver")
b2sums=(a045340483d62c625bdc633f0116bc204170d3fd4a4ab219b50560864c2ffd7bb2d8807dbc1aa4beedf84a317fe231dc2d6a51cb34bed2d922410c080dfcf57c)

prepare() {
  cd podcasts

  CARGO_HOME="$srcdir/build/cargo-home" \
    cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  arch-meson podcasts build

  CARGO_PROFILE_RELEASE_LTO=true \
    CARGO_PROFILE_RELEASE_CODEGEN_UNITS=1 \
    CARGO_PROFILE_RELEASE_DEBUG=2 \
    CARGO_PROFILE_RELEASE_STRIP=false \
    meson compile -C build
}

check() {
  dbus-run-session xvfb-run \
    -s '-screen 0 1920x1080x24 -nolisten local' \
    meson test -C build --print-errorlogs --no-rebuild
}

package() {
  meson install -C build --destdir "$pkgdir" --no-rebuild
}
