# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>

pkgname=esp-generate
pkgver=1.2.0
pkgrel=1
pkgdesc="Template generation tool to create no_std applications for Espressif's chips"
arch=('x86_64')
url="https://github.com/esp-rs/esp-generate"
license=('MIT' 'Apache-2.0')
makedepends=('cargo')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('33939a3021fce9605515351998a884fb355578aa2f06ddb2cf83db5e155ce68b')
options=('!lto')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --locked --target "$(rustc --print host-tuple)"
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 LICENSE-MIT -t "$pkgdir/usr/share/licenses/$pkgname"
}

# vim: ts=2 sw=2 et:
