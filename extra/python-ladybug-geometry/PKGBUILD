# Maintainer: George Rawlinson <grawlinson@archlinux.org>

pkgname=python-ladybug-geometry
pkgver=1.34.12
pkgrel=1
pkgdesc='Python library housing basic geometry objects and computation methods'
arch=(any)
url='https://github.com/ladybug-tools/ladybug-geometry'
license=(AGPL-3.0-only)
depends=(python)
makedepends=(
  git
  python-build
  python-installer
  python-setuptools-scm
  python-setuptools
  python-wheel
)
checkdepends=(python-pytest)
source=("$pkgname::git+$url#tag=v$pkgver")
sha512sums=('380358a7304d8294e0becbfca9fb1d2bdfe8e3070e6eb69ed76793c22ac05e0c8b35904b5fc7c7d5cce50a5c8abd699339c228a03eee631358ef603810a6d11b')
b2sums=('c06e8e5d3f825c9fb68a2a9b6aa259dd4c3febe684ab41c666970695193d3c91ff7b3320da7b42401997b81ec9dd7c271f8fe479988427553ffa6939d8c93d91')

build() {
  cd "$pkgname"

  python -m build --wheel --no-isolation
}

check() {
  cd "$pkgname"

  pytest -v
}

package() {
  cd "$pkgname"

  python -m installer --destdir="$pkgdir" dist/*.whl
}
