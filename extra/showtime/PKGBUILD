# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=showtime
pkgver=49.0
pkgrel=1
pkgdesc='Video player for GNOME'
arch=(any)
url='https://apps.gnome.org/Showtime/'
license=(GPL-3.0-or-later)
groups=(gnome)
depends=(
  dconf
  glib2
  graphene
  gst-plugins-bad-libs
  gst-plugins-base
  gst-plugins-base-libs
  gst-plugins-good
  gst-plugin-gtk4
  gstreamer
  gtk4
  hicolor-icon-theme
  libadwaita
  python
  python-gobject
)
makedepends=(
  appstream
  blueprint-compiler
  git
  meson
)
optdepends=(
  'gst-libav: Extra media codecs'
  'gst-plugins-bad: Extra media codecs'
  'gst-plugins-ugly: Extra media codecs'
)
source=(
  # Showtime tags use SSH signatures which makepkg doesn't understand
  "git+https://gitlab.gnome.org/GNOME/showtime.git#tag=${pkgver/[a-z]/.&}"
)
b2sums=('a6d43a0d508be4153873df8c5c3ee4610f141e4a9314fa00dcc63999f4b3469d05b29987eecb82392f680f0b16ca26445b6094b3656dc5673c7c1edbf5f32a09')
validpgpkeys=(
  E7F8575DF41BB394502E2AB50EDDDE9A9B3384C3 # kramo <contact@kramo.page>
)

prepare() {
  cd $pkgname
}

build() {
  arch-meson $pkgname build
  meson compile -C build
}

check() {
  meson test -C build --print-errorlogs
}

package() {
  meson install -C build --destdir "$pkgdir"

  python -m compileall -d /usr/lib "$pkgdir/usr/lib"
  python -O -m compileall -d /usr/lib "$pkgdir/usr/lib"
}
