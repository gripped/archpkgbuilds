  qt6-declarative
  qt6-svg
  qtkeychain-qt6
  soundtouch
  speex
  sqlite
  taglib1
  upower
  wavpack
)
makedepends=(
  benchmark
  chromaprint
  cmake
  faad2
  ffmpeg
  flac
  glib2
  glu
  gperftools
  gtest
