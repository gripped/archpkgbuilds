pkgname=mixxx
pkgver=2.5.1
pkgrel=1
pkgdesc="Free, open source software for digital DJing"
arch=(x86_64)
url="https://www.mixxx.org"
_url="https://github.com/mixxxdj/mixxx"
license=(GPL-2.0-or-later)
groups=(pro-audio)
# TODO: package libshout-idjc
depends=(
  gcc-libs
  glibc
  hicolor-icon-theme
  hidapi
  lame
  libebur128
  libkeyfinder
  libmad
  libmodplug
  libx11
  openssl
