#     )
#     ctest "${ctest_flags[@]}"
# }

package() {
    DESTDIR="$pkgdir" cmake --install build

    # remove reference to /usr/libexec
    mv -v "$pkgdir/usr/libexec/zypp/" "$pkgdir/usr/lib/"
    rm -vr "$pkgdir/usr/libexec/"
}
