# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=deepin-qt6platform-plugins
pkgver=6.0.4
pkgrel=1
pkgdesc='Qt 6 platform plugins for DDE'
arch=('x86_64')
url="https://github.com/linuxdeepin/qt6platform-plugins"
license=('LGPL3')
depends=('qt6-base' 'libx11' 'libxi' 'libxcb' 'xcb-util-wm' 'glibc' 'gcc-libs')
makedepends=('cmake' 'ninja' 'qt6-tools' 'libglvnd' 'gtest'
             'extra-cmake-modules' 'dtkcommon' 'cairo')
groups=('deepin')
source=("https://github.com/linuxdeepin/qt6platform-plugins/archive/$pkgver/$pkgname-$pkgver.tar.gz")
sha512sums=('ec8690afc58f71ef99aa548f6ed3184333f7a33e771249f277c9a8c97a9f4d14caccfcd25155ec25285bd256d4974abda42640f586f981ea9c78eb68e3bd5ca2')

build() {
  cd qt6platform-plugins-$pkgver
  cmake . -GNinja \
		-DCMAKE_INSTALL_LIBDIR=lib \
		-DCMAKE_INSTALL_PREFIX=/usr \
    -DDTK_VERSION=$pkgver
  ninja
}

package() {
  cd qt6platform-plugins-$pkgver
  DESTDIR="$pkgdir" ninja install
}
