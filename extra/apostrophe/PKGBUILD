# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=apostrophe
pkgver=3.3
pkgrel=2
pkgdesc='Distraction free Markdown editor'
arch=(any)
url='https://apps.gnome.org/Apostrophe/'
license=(GPL-3.0-or-later)
groups=(gnome-circle)
depends=(
  dconf
  glib2
  graphene
  gtk4
  gtksourceview5
  hicolor-icon-theme
  libadwaita
  libspelling
  pango
  python
  python-chardet
  python-gobject
  python-pypandoc
  python-regex
  webkitgtk-6.0
)
makedepends=(
  appstream
  git
  meson
)
optdepends=(
  'texlive-bin: Export to LaTeX'
  'texlive-formatsextra: Export to PDF'
  'texlive-latex: Inline math preview'
  'texlive-xetex: Export to PDF'
)
source=(
  "git+https://gitlab.gnome.org/World/apostrophe.git#tag=v$pkgver"
  0001-Don-t-use-Typst-engine.patch
)
b2sums=(
  1d82d39bc6f9b5c656a069a4687e23697a6c12fed744760d25164c6a6d46f9ba789c97433f2a03e87463b8a34b52aa8ffb419f03f8ab8f6205a10c0a10d9b4f2
  089036a3988ec8b8824051b2d707500d1557ea875a6e09b627a690f9672bc0cb43f0a6c3a81d9de643e163be874459cdcbbe810e6c49626a7e52ff8730554a9c
)

prepare() {
  cd $pkgname

  # Don't use Typst engine
  # https://gitlab.gnome.org/World/apostrophe/-/issues/634
  git apply -3 ../0001-Don-t-use-Typst-engine.patch
}

build() {
  arch-meson $pkgname build
  meson compile -C build
}

check() {
  meson test -C build --print-errorlogs
}

package() {
  meson install -C build --destdir "$pkgdir"
}
