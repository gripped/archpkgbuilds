pkgname=kdbg
pkgver=3.2.0
pkgrel=1
pkgdesc='A graphical debugger interface'
arch=(x86_64)
url='http://www.kdbg.org'
license=(GPL)
depends=(gcc-libs
         gdb
         glibc
         kconfig5
         kconfigwidgets5
         kcoreaddons5
         ki18n5
         kiconthemes5
         kwidgetsaddons5
         kwindowsystem5
         kxmlgui5
         qt5-base)
makedepends=(extra-cmake-modules)
source=(https://downloads.sourceforge.net/project/kdbg/Source%20Code/$pkgver/kdbg-$pkgver.tar.gz)
sha256sums=('1a858b2960ff9d65c14e24db0cbc5e340ac33323c8fe04b3003ab23a0c6b3471')

build() {
  cmake -B build -S $pkgname-$pkgver
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
