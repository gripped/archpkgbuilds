# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>

pkgname=vortix
pkgver=0.1.2
pkgrel=1
pkgdesc="A TUI for WireGuard and OpenVPN with real-time telemetry and leak guarding"
arch=('x86_64')
url="https://github.com/Harry-kp/vortix"
license=('MIT')
depends=('gcc-libs')
makedepends=('cargo')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('2950a8250aa44900dd816c62f6d4f36413968e089e7f9e2073b0dd542be4fb2a')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --locked --target "$(rustc --print host-tuple)"
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen -- --skip "app"
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" "$pkgdir/usr/bin/$pkgname"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname"
}

# vim: ts=2 sw=2 et:
