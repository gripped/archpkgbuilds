pkgname=qxmpp
pkgver=1.14.2
pkgrel=1
pkgdesc='Cross-platform C++ XMPP client and server library'
arch=(x86_64)
url='https://invent.kde.org/libraries/qxmpp'
license=(LGPL-2.1-or-later)
depends=(glib2
         glibc
         gstreamer
         libgcc
         libstdc++
         qca-qt6
         qt6-base)
makedepends=(cmake
             git
             libomemo-c)
optdepends=('libomemo-c: OMEMO support')
conflicts=(qxmpp-qt6)
provides=(qxmpp-qt6)
replaces=(qxmpp-qt6)
source=(git+https://invent.kde.org/libraries/qxmpp#tag=v$pkgver)
sha256sums=('b3fa98ae7af77a6e8e92b460bab60b6faff691356964726d321b11a401d9fc8d')

build() {
  cmake -B build -S $pkgbase \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_EXAMPLES=OFF \
    -DBUILD_TESTS=OFF \
    -DWITH_GSTREAMER=ON \
    -DBUILD_OMEMO=ON \
    -DQT_VERSION_MAJOR=6
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
