# Maintainer: George Rawlinson <george@rawlinson.net.nz>

pkgname=endless-sky-high-dpi
pkgver=0.11.0
pkgrel=1
pkgdesc='High DPI sprites for Endless Sky'
arch=(any)
url='https://github.com/endless-sky/endless-sky-high-dpi'
license=(
  GPL-3.0-only
  CC-BY-4.0
  CC-BY-SA-3.0
  CC-BY-SA-4.0
  LicenseRef-public-domain
)
depends=(endless-sky)
makedepends=(git)
source=("$pkgname::git+$url#tag=v$pkgver")
sha512sums=('3a100bdf6a3f2b1939a355bcaddb2c6ea09daba40774b40dbaa0c765d8e09fb47a7bda80812e438af18c2682adfa569f511ae453ac1816133107efc5d1b7b1b8')
b2sums=('fc0a1b0b7787ee753dd6d5912c6a6fb2c6b4f38235ebb1e461a014516f7485b6dc6ba961dc7d5682aeda67c5a6709bdd8cb6f5a2b81dd8eba5ca00be8bcfe4db')

package() {
  cd "$pkgname"

  # create plugin directory
  install -d "$pkgdir/usr/share/games/endless-sky/plugins/$pkgname"

  # install plugin
  cp -r * "$pkgdir/usr/share/games/endless-sky/plugins/$pkgname"

  # license
  install -Dm644 -t "$pkgdir/usr/share/licenses/$pkgname" copyright
}
