# Maintainer: Torsten Ke√üler <tpkessler@archlinux.org>

pkgname=python-onnxscript
pkgver=0.5.7
pkgrel=1
pkgdesc='Author ONNX functions and models'
arch=('any')
url='https://microsoft.github.io/onnxscript/'
license=('MIT')
depends=(
  python
  python-numpy
  python-ml-dtypes
  python-onnx
  python-onnx-ir
  python-typing_extensions
  python-rich
)
makedepends=(
  git
  python-build
  python-installer
  python-setuptools
  python-wheel
)
source=("${pkgname}::git+https://github.com/microsoft/onnxscript.git#tag=v${pkgver}")
sha512sums=('e9c5104bdc8ac3695693795f5b72f69a23933870cafb89575ecdae9aaea2c0685485199c3705b590710bd1dec0cd60b3d13e16829b9d1f47b761eff802b34491')


build() {
  cd $pkgname
  python -m build --wheel --no-isolation
}

package() {
  cd $pkgname
  python -m installer --destdir="$pkgdir" dist/*.whl
  install -Dm644 LICENSE "$pkgdir"/usr/share/licenses/$pkgname
}
