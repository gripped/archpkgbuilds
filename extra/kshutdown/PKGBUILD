pkgname=kshutdown
pkgver=6.2
pkgrel=1
pkgdesc='Shutdown Utility'
arch=(x86_64)
url='https://kshutdown.sourceforge.io/'
license=(GPL-2.0-or-later)
depends=(gcc-libs
         glibc
         kconfig
         kconfigwidgets
         kcoreaddons
         kcrash
         kdbusaddons
         kglobalaccel
         ki18n
         kidletime
         knotifications
         knotifyconfig
         kstatusnotifieritem
         kwidgetsaddons
         kxmlgui
         qt6-base)
makedepends=(extra-cmake-modules)
source=(https://downloads.sourceforge.net/$pkgname/KShutdown/$pkgver/$pkgname-source-$pkgver.zip)
sha256sums=('c15f42592d88e431adea8a255c0c94aaf3783a457c33732e99f96f78694d8396')

build() {
  cmake -B build -S $pkgname-$pkgver
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
