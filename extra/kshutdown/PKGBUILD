pkgname=kshutdown
pkgver=6.0
pkgrel=1
pkgdesc='Shutdown Utility'
arch=(x86_64)
url='https://kshutdown.sourceforge.io/'
license=(GPL-2.0-or-later)
depends=(gcc-libs
         glibc
         kconfig
         kconfigwidgets
         kcoreaddons
         kcrash
         kdbusaddons
         kglobalaccel
         ki18n
         kidletime
         knotifications
         knotifyconfig
         kstatusnotifieritem
         kwidgetsaddons
         kxmlgui
         qt6-base)
makedepends=(extra-cmake-modules)
source=(https://downloads.sourceforge.net/$pkgname/KShutdown/$pkgver/$pkgname-source-$pkgver.zip)
sha256sums=('197b3409bd60b653f2f1fc72dc2275d2df7b04434c585b112478a3fb5d3804b0')

build() {
  cmake -B build -S $pkgname-$pkgver
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
