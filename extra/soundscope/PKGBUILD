# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>

pkgname=soundscope
pkgver=1.8.1
pkgrel=1
pkgdesc="A TUI app for analyzing audio data such as frequencies and loudness"
arch=('x86_64')
url="https://github.com/bananaofhappiness/soundscope"
license=('MIT')
depends=('gcc-libs' 'alsa-lib')
makedepends=('cargo')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('9010a269515ee7d633701f856e388b2a3d0e72f030e57f9a5bc2b7ab7fe4f31f0d782aaad89a58aa5aba40cd6e8df25f2e75a715fa41cd691d77c3d473529098')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --locked --target "$(rustc --print host-tuple)"
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 LICENSE -t "$pkgdir/usr/share/licenses/$pkgname"
}

# vim: ts=2 sw=2 et:
