# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=maui-clip
_pkgname=clip
pkgver=4.0.2
pkgrel=2
pkgdesc='Video player and video collection manager'
url='https://mauikit.org/'
arch=(x86_64)
license=(LGPL-3.0-only)
depends=(ffmpeg
         gcc-libs
         glibc
         kcoreaddons
         ki18n
         mauikit
         mauikit-filebrowsing
         taglib
         qt6-base
         qt6-declarative
         qt6-multimedia)
makedepends=(extra-cmake-modules)
groups=(maui)
source=(https://download.kde.org/stable/maui/$_pkgname/$pkgver/$pkgname-$pkgver.tar.xz{,.sig}
        ffmpeg-8.patch)
sha256sums=('e1aec9766dcb4a265e57a5b6140f930222da2eb7740019a4d4a2372b920da182'
            'SKIP'
            '8b371d9040cbecec4f27507ab4c40d510c99f578aa6a657100cfd9b227c0098a')
validpgpkeys=(023625C8D02C0D8C15C3BABB86C793550794FEB8) # Camilo Higuita <milo.h@aol.com>                                    

prepare() {
  patch -d $pkgname-$pkgver -p1 < ffmpeg-8.patch
}

build() {
  cmake -B build -S $pkgname-$pkgver
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
