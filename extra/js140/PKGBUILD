)
checkdepends=(
  git
  mercurial
)
options=(
  !lto
)
_relver=${pkgver}esr
source=(
  https://archive.mozilla.org/pub/firefox/releases/$_relver/source/firefox-$_relver.source.tar.xz{,.asc}
  0001-Bug-1973993-Install-ProfilingCategoryList.h-into-bot.patch
  0002-Bug-1973994-mozjs-140.pc-does-not-contain-DXP_UNIX-o.patch
)
