_name=lspconfig
_upstream=nvim-lspconfig
pkgname=neovim-lspconfig
pkgver=2.5.0
pkgrel=1
pkgdesc='Collection of common configurations for Neovimâ€™s built-in language server client'
arch=(any)
url="https://github.com/neovim/$_upstream"
license=(Apache-2.0)
depends=(luajit
         neovim)
groups=(neovim-plugins)
_archive="$_upstream-$pkgver"
source=("$url/archive/v$pkgver/$_archive.tar.gz")
sha256sums=('aa46a68a41c5851336bc4fcc191b8402420cabd5b5995a8ed0173d0af5405fa6')

package() {
	cd "$_archive"
	find doc lsp lua plugin -type f -exec \
		install -Dm0644 {} "$pkgdir/usr/share/nvim/site/pack/dist/start/$_name/{}" \;
	install -Dm0644 -t "$pkgdir/usr/share/doc/$pkgname/" README.md
}
