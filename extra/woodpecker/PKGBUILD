pkgrel=1
pkgdesc='A simple CI engine with great extensibility'
arch=('x86_64')
url='https://woodpecker-ci.org'
license=('Apache-2.0')
depends=('glibc')
makedepends=('git' 'go' 'pnpm')
options=('!lto')
