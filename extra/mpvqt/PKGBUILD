# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=mpvqt
pkgver=git20231130
pkgrel=1
_commit=6533e8e1bf43c1da1b36a3d0ee163ffa3e608d07
pkgdesc='A libmpv wrapper for QtQuick2 and QML'
license=(LGPL)
arch=(x86_64)
url='https://invent.kde.org/libraries/mpvqt'
depends=(gcc-libs
         glibc
         mpv
         qt6-base
         qt6-declarative)
makedepends=(extra-cmake-modules
             git)
source=(git+https://invent.kde.org/libraries/mpvqt#commit=$_commit)
sha256sums=('SKIP')

build() {
  cmake -B build -S $pkgname \
    -DQT_MAJOR_VERSION=6
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
