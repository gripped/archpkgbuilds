pkgname=fcitx5-sayura
pkgver=5.1.5
pkgrel=1
pkgdesc="Sinhala Transe IME engine for Fcitx5"
arch=('x86_64')
url="https://github.com/fcitx/fcitx5-sayura"
license=('GPL')
depends=('fcitx5')
makedepends=('git' 'extra-cmake-modules')
source=("git+https://github.com/fcitx/fcitx5-sayura.git#tag=$pkgver?signed")
sha512sums=('6aa2c81dafc5369bcc4d2b60c62dadddab49e50323e8f30bbc4401689b4231fc98c006c88640b111fd38a9bb298cb489ce531989cf67fdfa727b5e48fdde3cab')
validpgpkeys=('2CC8A0609AD2A479C65B6D5C8E8B898CBF2412F9') # Weng Xuetian <wengxt@gmail.com>

build(){
  cd $pkgname
  cmake -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_INSTALL_LIBDIR=/usr/lib .
  make
}

package() {
  cd $pkgname
  make DESTDIR="$pkgdir" install
}
