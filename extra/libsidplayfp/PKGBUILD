pkgname=libsidplayfp
pkgver=2.16.1
pkgrel=1
pkgdesc='Library to play Commodore 64 music'
arch=(x86_64)
url='https://github.com/libsidplayfp/libsidplayfp'
license=(GPL-2.0-only)
depends=(glibc libgcc libstdc++ libgcrypt)
makedepends=(git vice xa libusb)
optdepends=(
  'vice: better SID support'
  'libusb: USBSID support'
)
source=(
  "$pkgname::git+$url#tag=v$pkgver"
  'github.com-libsidplayfp-exsid-driver::git+https://github.com/libsidplayfp/exsid-driver'
  'github.com-libsidplayfp-resid::git+https://github.com/libsidplayfp/resid'
)
sha512sums=('8102f8f3ff8ec118438aea0906a83cea44cab87d09795cfb463f549aa7bbcd28a639bd22e4f22f835234a4b8111657fe56dc1c81e1f2efe58b3b75b82944a8e0'
            'SKIP'
            'SKIP')
b2sums=('b6434321fe3b3bff63a78b15bc7d5abb408a468cdc3044eac7f82165b9a7dfa6fae5a70bec80827b21ec7a4f7f95f9b6c3d6d45dbffeb78a4fbf056caea0fbe1'
        'SKIP'
        'SKIP')

prepare() {
  cd "$pkgname"

  # prepare git submodule(s)
  git submodule init
  git config submodule.src/builders/exsid-builder/driver.url "$srcdir/github.com-libsidplayfp-exsid-driver"
  git config submodule.src/builders/resid-builder/resid.url "$srcdir/github.com-libsidplayfp-resid"
  git -c protocol.file.allow=always submodule update
}

build() {
  cd "$pkgname"

  autoreconf -vfi

  ./configure --prefix=/usr

  sed -i -e 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

  make
}

package() {
  DESTDIR="$pkgdir" make -C "$pkgname" install
}
