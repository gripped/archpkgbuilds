pkgname=deepin-picker
pkgver=6.0.8
pkgrel=1
pkgdesc='Color picker tool for deepin'
arch=('x86_64')
url="https://github.com/linuxdeepin/deepin-picker"
license=('GPL3')
depends=('dtk6gui' 'dtk6widget' 'qt6-base' 'gcc-libs')
makedepends=('git' 'qt6-tools')
groups=('deepin-extra')
source=("git+https://github.com/linuxdeepin/deepin-picker.git#tag=$pkgver")
sha512sums=('517755476c49d02d37a2fb1f313b2fd2728f91c8c900c04afa9df079af9570568d05ce9bbacf5c99618e932b9c2f8841eaee644793d78735ecf32cfc2ba9fa54')

build() {
  cd deepin-picker
  qmake6 PREFIX=/usr
  make
}

package() {
  cd deepin-picker
  make INSTALL_ROOT="$pkgdir" install
}
