pkgname=deepin-picker
pkgver=6.0.6
pkgrel=1
pkgdesc='Color picker tool for deepin'
arch=('x86_64')
url="https://github.com/linuxdeepin/deepin-picker"
license=('GPL3')
depends=('dtk6gui' 'dtk6widget' 'qt6-base' 'gcc-libs')
makedepends=('git' 'qt6-tools')
groups=('deepin-extra')
source=("git+https://github.com/linuxdeepin/deepin-picker.git#tag=$pkgver")
sha512sums=('71531db913eda94144ac7c2a32b520f9f30f4b3a63a5d6dff1a7e4fe85d753995cd373dde145617e27f18660bf69468f5cd7357cdec164dd9b62fb86daf82c3c')

build() {
  cd deepin-picker
  qmake6 PREFIX=/usr
  make
}

package() {
  cd deepin-picker
  make INSTALL_ROOT="$pkgdir" install
}
