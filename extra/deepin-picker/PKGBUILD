pkgname=deepin-picker
pkgver=6.0.10
pkgrel=1
pkgdesc='Color picker tool for deepin'
arch=('x86_64')
url="https://github.com/linuxdeepin/deepin-picker"
license=('GPL3')
depends=('dtk6gui' 'dtk6widget' 'qt6-base' 'gcc-libs')
makedepends=('git' 'qt6-tools')
groups=('deepin-extra')
source=("git+https://github.com/linuxdeepin/deepin-picker.git#tag=$pkgver")
sha512sums=('7fe5500ba2d0453107f83b7225650f57c76b9ea0800366e5ab82f22ffe6bd8b71521c6ae1a421cac67674f09cc778b421728747913b44bb49f32c0faacff6edd')

build() {
  cd deepin-picker
  qmake6 PREFIX=/usr
  make
}

package() {
  cd deepin-picker
  make INSTALL_ROOT="$pkgdir" install
}
