pkgname=deepin-picker
pkgver=6.0.7
pkgrel=1
pkgdesc='Color picker tool for deepin'
arch=('x86_64')
url="https://github.com/linuxdeepin/deepin-picker"
license=('GPL3')
depends=('dtk6gui' 'dtk6widget' 'qt6-base' 'gcc-libs')
makedepends=('git' 'qt6-tools')
groups=('deepin-extra')
source=("git+https://github.com/linuxdeepin/deepin-picker.git#tag=$pkgver")
sha512sums=('4403038620ee6e0f6a6f5287f8ec511b5e7441bc10b2f1d9d628362093f14051c7a16bfca8a670a170c118152e846d36dabf784b38d25b8b64c010b41bbc1020')

build() {
  cd deepin-picker
  qmake6 PREFIX=/usr
  make
}

package() {
  cd deepin-picker
  make INSTALL_ROOT="$pkgdir" install
}
