# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=bliss
pkgver=0.77
pkgrel=4
pkgdesc='A library for computing automorphism groups and canonical forms of graphs'
arch=(x86_64)
url='https://users.aalto.fi/~tjunttil/bliss/'
license=(GPL-3.0-only)
depends=(gcc-libs
         glibc)
       # gmp disabled, causes segfaults
makedepends=(cmake
             git)
source=(git+https://github.com/scipopt/bliss#tag=v$pkgver)
sha256sums=('caa2f6fff4dd28f4dde1de457e5aa705c8372ec99ce554698d4daf4a400d4d39')

prepare() {
  sed -e '/hidden/d' -i bliss/CMakeLists.txt
}

build() {
  cmake -B build -S bliss \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DBUILD_SHARED_LIBS=ON \
    -DUSE_GMP=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
