pkgname=yubikey-touch-detector
pkgver=1.12.4
pkgrel=1
pkgdesc="A tool that can detect when your YubiKey is waiting for a touch"
url="https://github.com/maximbaz/yubikey-touch-detector"
arch=('x86_64')
license=('ISC')
depends=('glibc')
makedepends=('go' 'git' 'scdoc')
optdepends=('gnupg: for GPG'
            'openssh: for SSH')
source=("git+${url}.git#tag=${pkgver}?signed")
b2sums=('7bd226925fb7c70667eb10992b4b111cc15d14cd896178e4bc66f6f9c4671496fbba85acfe5f320088974f8e63e86a7749800ba66070ee8e045713983089d63a')
validpgpkeys=('56C3E775E72B0C8B1C0C1BD0B5DB77409B11B601')

build() {
	cd "${pkgname}"
	make build
}

package() {
	cd "${pkgname}"
	make DESTDIR="${pkgdir}" install
}
