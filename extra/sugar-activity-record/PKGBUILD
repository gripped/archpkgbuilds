  gst-plugins-base-libs
  gst-plugins-good
  gst-python
  gstreamer
  gtk3
  librsvg
  pango
  python
  python-cairo
  python-dbus
  python-gobject
  sugar-toolkit-gtk3
  telepathy-glib
)
makedepends=(git)
source=("git+https://github.com/sugarlabs/$_pkgname.git#tag=v$pkgver")
b2sums=(88d76d406063378fbe3730c4869240189d9bf6509de3dbf949583afc4916a3a3885dc8c30ae774e853e9840be31218081230a13296a234aae7cb7fdcaba90354)

package() {
  cd $_pkgname
  python setup.py install --prefix "$pkgdir/usr" --skip-install-desktop-file
}
