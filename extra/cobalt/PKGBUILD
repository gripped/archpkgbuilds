# Maintainer: Levente Polyak <anthraxx[at]archlinux[dot]org>
# Maintainer: Caleb Maclennan <caleb@alerque.com>
# Contributor: Stas Rudakou <stas at garage22 dot net>

pkgname=cobalt
pkgver=0.20.1
pkgrel=1
pkgdesc='Static site generator written in Rust'
url='https://cobalt-org.github.io/'
arch=(x86_64)
license=(MIT)
depends=(
  gcc-libs # libgcc_s.so ld-linux-x86-64.so
  glibc # libm.so libc.so
  libsass # libsass.so
  openssl
)
makedepends=(
  cargo
)
source=(https://github.com/cobalt-org/cobalt.rs/archive/v${pkgver}/${pkgname}.rs-v${pkgver}.tar.gz)
sha512sums=('b4bff3992fa1c87f31455db163def5c85a42d38ec4eb39a86d39bdf58876526389182e03124dfed7448970dccdb1939fd9f15ece0ce4ac6d62bbf668395330e2')
b2sums=('81a375ff2cac14e9cd6b3140d75cb77893bfe2b387478d3f02e116d81bb26fb13080d5d4d3d78f697e361135557d95fd6b093e66a8b8058b5190534288454468')

prepare() {
  cd ${pkgname}.rs-${pkgver}
  cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd ${pkgname}.rs-${pkgver}
  export OPENSSL_NO_VENDOR=true
  cargo build --frozen --release
}

check() {
  cd ${pkgname}.rs-${pkgver}
  export OPENSSL_NO_VENDOR=true
  cargo test --frozen
}

package() {
  cd ${pkgname}.rs-${pkgver}
  install -Dm 755 target/release/cobalt -t "${pkgdir}/usr/bin"
  install -Dm 644 LICENSE-MIT -t "${pkgdir}/usr/share/licenses/${pkgname}"
}

