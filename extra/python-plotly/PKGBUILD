# Maintainer: Bert Peters <bertptrs@archlinux.org>
# Contributor: Grey Christoforo <first name at last name dot net>

pkgname=python-plotly
pkgver=6.1.2
pkgrel=1
pkgdesc="An open-source, interactive graphing library"
arch=('any')
url="https://github.com/plotly/plotly.py"
license=('MIT')
depends=(
    python
    python-narwhals
)
# optdepends based on requires-optional.txt
optdepends=(
    jupyterlab
    python-anywidget
    python-numpy
    python-matplotlib
    python-pillow
    python-scipy
    python-pandas
    python-colorcet
    python-inflect
    python-psutil
    python-pyshp
    python-geopandas
    python-shapely
)
makedepends=(
    git
    npm
    python-wheel
    python-build
    python-installer
    python-setuptools
    python-jupyter_core
    python-tornado
    jupyterlab
)
checkdepends=(
    python-requests
    python-pytest
)
source=(
     "${pkgname}::git+https://github.com/plotly/plotly.py#tag=v$pkgver"
)
sha256sums=('5d96403c1c1f501084423608e0c83d29b2ad01c5899a3fdaa19d8dddab10413c')
options=(!strip !debug) # strip and debug aren't useful for python files and take forever

prepare() {
  cd python-plotly

  git clean -dfx
}

build() {
  cd python-plotly

  python -m build --wheel --no-isolation --skip-dependency-check
}

check() {
  cd python-plotly
  local pytest_options=(
    -vv
    -W ignore::DeprecationWarning
  )
  pytest "${pytest_options[@]}" tests/test_core
}

package() {
  cd python-plotly
  python -m installer --destdir="$pkgdir"/ dist/*.whl
  install -Dm644 LICENSE.txt "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
