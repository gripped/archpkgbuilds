# Maintainer: Maxime Gauduin <alucryd@archlinux.org>

pkgname=wingpanel-indicator-sound
pkgver=8.0.2
pkgrel=1
pkgdesc='Wingpanel Sound Indicator'
arch=(x86_64)
url=https://github.com/elementary/wingpanel-indicator-sound
license=(GPL-3.0-only)
groups=(pantheon)
depends=(
  cairo
  dconf
  gdk-pixbuf2
  glib2
  glibc
  gtk3
  libcanberra
  libgee
  libgranite.so
  libnotify
  libpulse
  libwingpanel.so
)
makedepends=(
  git
  gobject-introspection
  intltool
  meson
  vala
)
_tag=7736e15a16c08bbbbc26a132860490371d791cb6
source=(wingpanel-indicator-sound::git+https://github.com/elementary/wingpanel-indicator-sound.git#tag=${_tag})
b2sums=('18ce1609464dbfd053c4b329505d346505848dbd8186d13309198af6be75b13f8f1ca5537ad98772061624a38fd27be9843192f5798c4b4cd6384a24a787920d')

pkgver() {
  cd wingpanel-indicator-sound
  git describe --tags
}

build() {
  arch-meson wingpanel-indicator-sound build
  ninja -C build
}

package() {
  DESTDIR="${pkgdir}" ninja -C build install
}

