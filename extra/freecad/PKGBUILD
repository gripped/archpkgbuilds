pkgname=freecad
pkgver=1.0.1
pkgrel=3
pkgdesc='Feature based parametric 3D CAD modeler'
arch=(x86_64)
url='https://freecadweb.org/'
license=(LGPL-2.0-only)
depends=(
  boost-libs
  coin
  fmt
  glew
  libspnav
  med
  opencascade
  openmpi
  pugixml
  pyside6
  yaml-cpp
  python-markdown
  python-matplotlib
  python-pip
  python-pivy
  python-ply
  python-yaml
  qt6-svg
  qt6-tools
  verdict
  vtk
  xerces-c
)
makedepends=(
  boost
  cgns
  cmake
  eigen
  git
  libharu
  liblas
  ninja
  nlohmann-json
  openvdb
  openvr
  ospray
