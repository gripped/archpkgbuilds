pkgname=smlnj
pkgver=110.99.8
pkgrel=2
pkgdesc='Standard ML compiler from New Jersey'
url='https://www.smlnj.org/'
license=(SMLNJ)
arch=(x86_64)
makedepends=(smlnj)
provides=(sml)
install=smlnj.install
_url="http://smlnj.cs.uchicago.edu/dist/working/$pkgver/"
source=(
  "$pkgname-$pkgver-MLRISC.tgz::${_url}MLRISC.tgz"
