# Maintainer: Jakub Klinkovsk√Ω <lahwaacz at archlinux dot org>

_name=numba-cuda
pkgname=python-$_name
pkgver=0.25.0
pkgrel=1
pkgdesc="The CUDA target for Numba"
url="https://github.com/NVIDIA/numba-cuda"
arch=(x86_64)
license=(BSD-2-Clause)
depends=(
  gcc-libs
  glibc
  python
  python-cuda-bindings
  python-cuda-core
  python-llvmlite
  python-numba
  python-numpy
  python-packaging
  python-yaml
)
makedepends=(
  python-build
  python-installer
  python-setuptools
  python-wheel
)
source=($pkgname-$pkgver.tar.gz::$url/archive/refs/tags/v$pkgver.tar.gz)
b2sums=('97d6124482fdeb077bbbbb718098fd47fd0a1db82f79a7010578a26a67bb8edf3e40e2d87a3d21be4ac0a92a760a79b0e8c7a2e9903ccb4ba5312bdce760adec')

build() {
  cd $_name-$pkgver
  python -m build --wheel --no-isolation
}

package() {
  cd $_name-$pkgver
  python -m installer --destdir="$pkgdir" dist/*.whl
  install -vDm 644 LICENSE LICENSE.numba -t "$pkgdir"/usr/share/licenses/$pkgname/
  # Remove tests
  rm -rv "$pkgdir"$(python -c "import site; print(site.getsitepackages()[0])")/numba_cuda/numba/cuda/{tests/,testing.py}
}
