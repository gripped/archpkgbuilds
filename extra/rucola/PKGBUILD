# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>
# Contributor: linus.mussmaecher@gmail.com

pkgname=rucola
pkgver=0.8.2
pkgrel=1
pkgdesc="Terminal-based markdown note manager"
arch=('x86_64')
url="https://github.com/Linus-Mussmaecher/rucola"
license=("GPL-3.0-only")
depends=('gcc-libs')
makedepends=('cargo')
replaces=('rucola-notes')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('6c5c5c09491bd10f10f914b36323f202db1cc71ad2889d6707422ce849d85193')
options=('!lto')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --target "$(rustc --print host-tuple)" # --locked
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 default-config/*.{css,toml} -t "$pkgdir/usr/share/doc/$pkgname/default-config"
}

# vim: ts=2 sw=2 et:
