# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>
# Contributor: linus.mussmaecher@gmail.com

pkgname=rucola
pkgver=0.7.0
pkgrel=1
pkgdesc="Terminal-based markdown note manager"
arch=('x86_64')
url="https://github.com/Linus-Mussmaecher/rucola"
license=("GPL-3.0-only")
depends=('gcc-libs')
makedepends=('cargo')
replaces=('rucola-notes')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha256sums=('57bc72d9fb36f8c3095ab92bbb51a222f7f9369133878080938d64f4ff57af11')
options=('!lto')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --target "$(rustc -vV | sed -n 's/host: //p')" # --locked
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 default-config/*.{css,toml} -t "$pkgdir/usr/share/doc/$pkgname/default-config"
}

# vim: ts=2 sw=2 et:
