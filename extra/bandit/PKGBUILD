# Maintainer: Jelle van der Waa <jelle@archlinux.org>

pkgname=bandit
pkgver=1.9.1
pkgrel=1
pkgdesc='Python security linter from OpenStack Security'
arch=('any')
url='https://github.com/PyCQA/bandit'
license=('Apache')
depends=('python-yaml' 'python-stevedore' 'python-gitpython' 'python-rich')
makedepends=('python-setuptools' 'python-pbr' 'git')
source=(https://files.pythonhosted.org/packages/source/${pkgname::1}/${pkgname}/${pkgname}-${pkgver}.tar.gz)
sha512sums=('3fbf24e72e20b9a0d222c15b085d7b7f5f0b601999440bc176dff7f08fa382632447aba8a3187fd7627ce12d79176b81a49339032254f26adc6615eaf99548b0')

build() {
    cd bandit-$pkgver
    python setup.py build
}

package() {
    cd bandit-$pkgver
    python setup.py install --root="$pkgdir" --skip-build --optimize=1
}
