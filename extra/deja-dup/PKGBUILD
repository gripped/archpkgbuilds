# Maintainer: Balló György <ballogyor+arch at gmail dot com>

pkgname=deja-dup
pkgver=49.2
pkgrel=1
pkgdesc='Easy to use backup tool based on Restic'
arch=(x86_64)
url='https://apps.gnome.org/DejaDup/'
license=(GPL-3.0-or-later)
groups=(gnome-circle)
depends=(
  bash
  dconf
  duplicity
  fuse3
  glib2
  glibc
  gtk4
  gvfs
  hicolor-icon-theme
  json-glib
  libadwaita
  libsecret
  libsoup3
  pango
  restic
)
makedepends=(
  appstream
  blueprint-compiler
  git
  itstool
  meson
  vala
)
checkdepends=(xdg-user-dirs)
optdepends=('rclone: Backup into Google Drive or Microsoft OneDrive')
source=("git+https://gitlab.gnome.org/World/$pkgname.git#tag=$pkgver")
b2sums=(c8f909b440064f7cac2d75fd0c6d49d83624c283a2a06d619755bd6bc1ba9f1e9a60cfa3465dd8dd4dd82d2e46f810f8257fda77b0bf764aedc72a5b10ed89f2)
validpgpkeys=(A3A5C2FC56AE7341D308D8571B50ECA373F3F233) # Michael Terry <mike@mterry.name>

build() {
  arch-meson $pkgname build \
    -D packagekit=disabled
  meson compile -C build
}

check() {
  dbus-run-session \
    meson test -C build --print-errorlogs
}

package() {
  meson install -C build --destdir "$pkgdir"
}
