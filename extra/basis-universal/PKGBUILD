# Maintainer: George Rawlinson <grawlinson@archlinux.org>

pkgname=basis-universal
pkgver=1.60
pkgrel=1
pkgdesc='Basis Universal GPU Texture Codec'
arch=(x86_64)
url='https://github.com/BinomialLLC/basis_universal'
license=(Apache-2.0)
depends=(glibc gcc-libs)
makedepends=(git cmake ninja)
source=(
  "$pkgname::git+$url#tag=v${pkgver//./_}"
  strip-rpath.patch
)
sha512sums=('a425bd0619aa97891142383e720e3348d84fc642ed674cb9d40bd74b43278a78b9a577667553bbe991e733cec46cf08f98fd790cd1f4286d015b466c4b7a467c'
            '767cdd69636423b39e94acd0bacd011551a3745e0fb296f3263650c0c410128dd592775428b345d5a4661e837ee9dd6550004d516412d6cd6ca1664e8017f8fa')
b2sums=('8e155ba45db8fea7902606288582af7af4dbcde9d59ce6c7342b659480ed6cd9bf6cff0aaf3024713a7d8b06212860bbce94f60edd131e475c73450d5972d263'
        'c6ef61d468151aae7711a0adef474c21cc746a1bff80f32e33dca72760d23494e733d4dd941bf72510f586fe8b6564d6cdca6dc7c6ff0b05aef7758b46b30f8f')

prepare() {
  cd "$pkgname"

  # enable installation of binary+library
  git cherry-pick --no-commit \
    e4d2662015233f2bd111d73d49981a75ed8f2a6d \
    28d6f71ee33003a8ccbdf6ecf1174d003f2ffc2d \
    56fedfe14ebd21dfec68e8f71f23feabad6c1b44 \
    872aca5dc25036c12cb31b3916923b16bdd70fe3

  patch -p1 -i "$srcdir/strip-rpath.patch"
}

build() {
  local cmake_options=(
    -B build
    -S "$pkgname"
    -G Ninja
    -D CMAKE_BUILD_TYPE=Release
    -D CMAKE_INSTALL_PREFIX=/usr
    -D SSE=ON
    -W no-dev
  )

  cmake "${cmake_options[@]}"

  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
