# Maintainer: Jakub Klinkovsk√Ω <lahwaacz at archlinux dot org>

pkgname=rdkit
pkgver=2025.09.1
pkgrel=3
pkgdesc="Open-source toolkit for cheminformatics"
arch=(x86_64)
url="https://github.com/rdkit/rdkit"
license=(BSD-3-Clause)
depends=(
  boost-libs
  cairo
  freetype2
  gcc-libs
  glibc
  inchi
  python
  python-numpy
  python-pillow
)
makedepends=(
  boost
  catch2
  cmake
  eigen
  git
  ninja
)
source=($pkgname-$pkgver.tar.gz::$url/archive/Release_${pkgver//./_}.tar.gz)
b2sums=('c7ac861d8e1c6c675853490a983b9dc86020ae4a66a9caec38335510758ba6757fd6111a81166403315111ad5270b109fb269df7e2c9899ac577ed2486f0cc58')

prepare() {
  # Fix finding Eigen3 https://github.com/rdkit/rdkit/issues/8896
  rm $pkgname-Release_${pkgver//./_}/Code/cmake/Modules/FindEigen3.cmake
  sed -i 's|if(NOT EIGEN3_FOUND)|if(NOT TARGET Eigen3::Eigen)|' $pkgname-Release_${pkgver//./_}/CMakeLists.txt
}

build() {
  local cmake_options=(
    -B build
    -S $pkgname-Release_${pkgver//./_}
    -G Ninja
    -W no-dev
    -DCMAKE_BUILD_TYPE=None
    -DCMAKE_INSTALL_PREFIX=/usr
    -DRDK_BUILD_CAIRO_SUPPORT=ON
    -DRDK_BUILD_INCHI_SUPPORT=ON
    -DRDK_INSTALL_INTREE=OFF
    -DRDK_INSTALL_STATIC_LIBS=OFF
    # TODO: the test suite has too many failures, even due to bad input files
    -DRDK_BUILD_CPP_TESTS=OFF
  )
  cmake "${cmake_options[@]}"
  cmake --build build
}

