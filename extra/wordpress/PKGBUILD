pkgname=wordpress
pkgver=6.9.1
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL-2.0-or-later)
depends=(php-interpreter)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(!debug emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('85c8436998870e42a39ae7558b096d19d294a0cd2adb7c87ee764db973b01953')
b2sums=('67a1f9c3b69db7d1af268910ad2b3ed6d18b5d838599bfb1a38051d0909de748e22e89f61a4b2cea1d6c79ace7b369b7333f95acb3db62ce845ec646ec84a646')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}
