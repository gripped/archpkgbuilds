pkgname=wordpress
pkgver=6.3
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL)
depends=(php)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(!debug emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('44654fa2913ee27cdea2a9d79a09f1e7fc981a18b654f13abc4ac74e455e7aa2')
b2sums=('869f019166e1a5dc87eecfcd5dc8d95975811bfe64ec7bf1216ebe57e6e1362091f7e7b9e8342f55e991d5fd1856c6aad2cfc1e1a52b149248d9ea94bd378a13')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}

# getver: core.trac.wordpress.org/timeline?milestone=on
