pkgname=wordpress
pkgver=6.8.3
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL-2.0-or-later)
depends=(php-interpreter)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(!debug emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('92da34c9960e64d1258652c1ef73c517f7e46ac6dfd2dfc75436d3855af46b0c')
b2sums=('1b4214b27a1c904b0f660041504887b11280f0a9784293cd4c6e242b309a6d1e9c81b1c3d74563299eeba39c846a879eed327b5ff48b2c4b27e307c1959da0e9')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}
