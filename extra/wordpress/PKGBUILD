pkgname=wordpress
pkgver=6.5
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL-2.0-or-later)
depends=(php)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(!debug emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('342456288ae148c0ba8adc36cbf58951dd8b491b6755692654efdbda71092b9f')
b2sums=('f4cea5cf575161ff7d7c1e0c0f2176323374429b899ad64e84059578bb827ccb8a7668c36bbf48238c66b6006c0292cbf5f0866aa97858f78a012845184ebf46')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}

# getver: https://wordpress.org/download/releases
