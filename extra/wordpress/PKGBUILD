pkgname=wordpress
pkgver=6.9
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL-2.0-or-later)
depends=(php-interpreter)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(!debug emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('5b36390233e32fef68cb5f66435bb32bdd50e0b3dfa5750aceb2de3c5993d720')
b2sums=('0de234c960b60177f4cbbbe3cb2e833e2a326a489157e6d63a21a89b30bf8dbd0235b709a96d8df42c5e3651edf0badb51462ebc044d735fc10aac0c9b828842')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}
