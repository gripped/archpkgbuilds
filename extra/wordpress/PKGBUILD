pkgname=wordpress
pkgver=6.3.2
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL)
depends=(php)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(!debug emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('268dbf5659b8325db8b9c3c8e991ecda691ba58dab641d5da1f9865cd3f0780f')
b2sums=('d1fe6e7822394051dab99bd854095429ae115f6c41a558805276c8c7a5440e8279ae3ca89f5b2da789550bc0d40ecab44000de8e39a753fa1b3a01f4c8e6194f')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}

# getver: core.trac.wordpress.org/timeline?milestone=on
