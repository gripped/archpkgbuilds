pkgname=wordpress
pkgver=6.6
pkgrel=1
pkgdesc='Blog tool and publishing platform'
arch=(any)
url='https://wordpress.org/'
license=(GPL-2.0-or-later)
depends=(php)
optdepends=('apache: Web server'
            'mariadb: Database server'
            'nginx: Web server')
options=(!debug emptydirs)
install=$pkgname.install
source=("https://wordpress.org/$pkgname-$pkgver.tar.gz")
sha256sums=('a5f838479dd146f9173a70363515b3dc34a2e752ccf6dc544dea0b343ef25909')
b2sums=('15ee3787067b62b28fc558b8fe5bdd95aee5693f6f0e67584051fd5dd2fdf88b461c7ef9911efe273d11070bab6e68caf37c563e2e744568f92217c06c0f53d2')

package() {
  install -d "$pkgdir/usr/share/webapps"
  cp -r $pkgname "$pkgdir/usr/share/webapps"
}
