pkgname=gnome-shell-extension-arc-menu
_pkgname=ArcMenu
pkgver=62
pkgrel=1
pkgdesc='Application menu extension for GNOME Shell'
arch=(any)
url='https://gitlab.com/arcmenu/ArcMenu'
license=(GPL-2.0-or-later)
depends=(
  gnome-menus
  gnome-shell
)
makedepends=(git)
source=("git+https://gitlab.com/arcmenu/$_pkgname.git#tag=v$pkgver")
b2sums=('cbaeef72457a1a08febe96350cdcd777cd8446094752c028e8a1fafdedd45ce5402469d2b4124296ac5eaa20da7266de649da4ac94e53fbd0f8dafeaf4402596')

build() {
  cd $_pkgname
  make
}

package() {
  cd $_pkgname
  make VERSION="$pkgver" DESTDIR="$pkgdir" install
}
