# Maintainer: kpcyrd <kpcyrd[at]archlinux[dot]org>

pkgname=harper
pkgver=1.6.0
pkgrel=1
pkgdesc='The Grammar Checker for Developers'
arch=(x86_64)
url='https://github.com/Automattic/harper'
license=(Apache-2.0)
depends=(
  gcc-libs
  glibc
)
makedepends=(
  cargo
)
options=(!lto)
source=(https://github.com/Automattic/${pkgname}/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz)
sha256sums=('4182e50001c66077bb16ce9fe93752382256ee2bd4b8d8487053a980b0a69269')
b2sums=('d0b98a86da66542e8f6053ef076970c5fcafeddedfddc3c7c4bc57f0296a3e0774100a77a847f4ab35c0ea1da5cf502c244f78163eb9c24efe366613d4690a80')

prepare() {
  cd "${pkgname}-${pkgver}"
  cargo fetch --locked --target "$(rustc --print host-tuple)"
}

build() {
  cd ${pkgname}-${pkgver}
  cargo build --frozen --release
}

check() {
  cd ${pkgname}-${pkgver}
  cargo test --frozen
}

package() {
  cd ${pkgname}-${pkgver}
  install -Dm 755 -t "${pkgdir}/usr/bin" \
    target/release/harper-cli \
    target/release/harper-ls
}

# vim: ts=2 sw=2 et:
