pkgname=kdiff3
pkgver=1.12.0
pkgrel=1
pkgdesc='A file comparator/merge tool'
arch=(x86_64)
url='https://kde.org/applications/development/kdiff3/'
license=(GPL-2.0-or-later)
depends=(gcc-libs
         glibc
         icu
         kconfig
         kcoreaddons
         kconfigwidgets
         kcrash
         ki18n
         kio
         kwidgetsaddons
         kxmlgui
         qt6-base)
makedepends=(boost
             extra-cmake-modules
             kdoctools)
source=(https://download.kde.org/stable/$pkgname/$pkgname-$pkgver.tar.xz{,.sig})
sha256sums=('f93a065df8b2d70f22eb473c2dbfaad975c70341f37a918eb6ebb452771bacd6'
            'SKIP')
validpgpkeys=(EE56D710885D36FB1E4D21F3F442B36D614B06BC) # Michael Reeves <reeves.87@gmail.com>

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_BUILD_TYPE=None
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
