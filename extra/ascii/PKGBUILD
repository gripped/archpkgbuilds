pkgname=ascii
pkgver=3.31
pkgrel=1
pkgdesc="Utility for conversion between various byte representations and the ASCII character table"
arch=('x86_64')
url='http://www.catb.org/~esr/ascii'
license=('BSD-2-Clause')
depends=('glibc')
source=("$url/$pkgname-$pkgver.tar.gz")
b2sums=('8483d8fee35a340265e6176ffd7f68ee482c2fd861ebcb879b8ec792b806cd23cd69075db9d3d04a0bbd8cd87ff1101b09e9a7beb56c45b76945d175874e2fd8')

build() {
  cd $pkgname-$pkgver
  make CFLAGS="$CFLAGS $LDFLAGS"
}

package() {
  cd $pkgname-$pkgver
  install -vDm755 -t "$pkgdir/usr/bin" ascii
  install -vDm644 -t "$pkgdir/usr/share/man/man1" ascii.1
  install -vDm644 -t "$pkgdir/usr/share/licenses/$pkgname" COPYING
}
