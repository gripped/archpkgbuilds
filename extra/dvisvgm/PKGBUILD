# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=dvisvgm
pkgver=3.1
pkgrel=1
pkgdesc='A fast DVI, EPS, and PDF to SVG converter'
arch=(x86_64)
url='https://dvisvgm.de/'
license=(GPL3)
depends=(texlive-bin woff2 ghostscript)
makedepends=(python)
source=(https://github.com/mgieseki/dvisvgm/releases/download/$pkgver/$pkgname-$pkgver.tar.gz)
sha256sums=('a7ec5a086348391f6d4c7131e099824e47a021bcb8d7d445f144f08bc2ef1b4a')

build() {
  cd $pkgname-$pkgver
  ./configure \
    --prefix=/usr
  make
}

check() {
  cd $pkgname-$pkgver
  make check
}

package() {
  cd $pkgname-$pkgver
  make DESTDIR="$pkgdir" install
}
