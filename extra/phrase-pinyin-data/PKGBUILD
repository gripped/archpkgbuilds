pkgname=phrase-pinyin-data
pkgver=0.19.0
pkgrel=1
pkgdesc="Pinyin Data for Phrases"
arch=('any')
license=('MIT')
url="https://github.com/mozillazg/phrase-pinyin-data"
depends=()
makedepends=('git')
source=("git+https://github.com/mozillazg/phrase-pinyin-data.git#tag=v$pkgver")
sha512sums=('f8eade6a87cd54b87e447e9a547ae456ebe5cf6c7bc8c8abf77e2a7c21bb90bbb9d10eea0334105e264d262471366613f6a211ab14a92b1805e55c5f8e6042b7')

package() {
  cd $pkgname
  install -Dm644 cc_cedict.txt pinyin.txt -t "$pkgdir"/usr/share/$pkgname/
  install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/
}
