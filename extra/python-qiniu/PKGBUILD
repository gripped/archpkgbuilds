# Maintainer: Felix Yan <felixonmars@archlinux.org>

pkgname=python-qiniu
pkgver=7.17.0
pkgrel=2
pkgdesc="Qiniu Resource Storage SDK for Python"
arch=('any')
url='https://github.com/qiniu/python-sdk'
license=('MIT')
depends=('python-requests')
makedepends=('git' 'python-setuptools')
checkdepends=('python-pytest' 'python-freezegun')
source=("git+https://github.com/qiniu/python-sdk.git#tag=v$pkgver")
sha512sums=('f29e1feefaaf42543d19a0e4024fd6ef6e7f932371df07d8addd99bb407a42b991160522cc82e216c4f57c0b2f904dc60b40b1f04cc558828ee521f79f57d214')

build() {
  cd python-sdk
  python setup.py build
}

check() {
  cd python-sdk
  pytest || echo "Tests failed"
}

package() {
  cd python-sdk
  python setup.py install -O1 --root "$pkgdir"
  install -Dm644 LICENSE -t "$pkgdir"/usr/share/licenses/$pkgname/
}
