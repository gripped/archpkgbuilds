source=("git+https://github.com/rime/rime-essay.git#commit=$_commit")
sha512sums=('7946c14738dc3064c9826f2e74a113140ecba96e29dcdfd8d75e6c2ed81aaf7891e4683b48dd7be369068177e6d280f3ac0e17ea8f0068793fa8da8dd084515c')

package() {
  cd $pkgname
  install -Dm644 *.txt -t "$pkgdir"/usr/share/rime-data/
}
