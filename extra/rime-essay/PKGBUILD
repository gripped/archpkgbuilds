arch=('any')
url="https://github.com/rime/rime-essay"
license=('LGPL')
makedepends=(git)
source=("git+https://github.com/rime/rime-essay.git#commit=$_commit")
sha512sums=('861fede8800f03eae7c703d85d237fb2fef98536d0f376618f66f5e46c321abe72ad0be4d2d3f0650f362552f32c3e257daeca592e5bf4fce622bf2c47639e90')

package() {
  cd $pkgname
  install -Dm644 *.txt -t "$pkgdir"/usr/share/rime-data/
}
