sha512sums=('6976535ef0efff95799b494ad13964a6bf6f94c2f61a9449278a0598257047962bad734b16c0b97d5950a5cd3c32647755aed55a514a8689d758cf44f73c342a')

package() {
  cd $pkgname
  install -Dm644 *.txt -t "$pkgdir"/usr/share/rime-data/
}
