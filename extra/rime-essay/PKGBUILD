license=('LGPL')
makedepends=(git)
source=("git+https://github.com/rime/rime-essay.git#commit=$_commit")
sha512sums=('3ef9bfb7a5b09076a5eab42379c8601cc7bc43974db75c1b151e73172bf291d1290af30cfd33b943c15780968feca9737f69207f2d2342591f722fb48ae8495e')

package() {
  cd $pkgname
  install -Dm644 *.txt -t "$pkgdir"/usr/share/rime-data/
}
