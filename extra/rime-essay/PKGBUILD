source=("git+https://github.com/rime/rime-essay.git#commit=$_commit")
sha512sums=('b3a5dc617c16128f876429d58da1e6d144da23215337d7127369c81927c8773c00789c2ada6c64564d38652ede543439899dacbd65d72467ce5ec8191d7a5f68')

package() {
  cd $pkgname
  install -Dm644 *.txt -t "$pkgdir"/usr/share/rime-data/
}
