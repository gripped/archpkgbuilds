pkgname=rocwmma
pkgver=6.4.4
pkgrel=1
pkgdesc='Library for accelerating mixed precision matrix multiplication'
arch=('x86_64')
url='https://rocm.docs.amd.com/projects/rocWMMA/en/latest/'
license=('MIT')
depends=(
    'hip-runtime-amd'
    'openmp'
    'rocblas'
    'rocm-core'
)
makedepends=(
    'doxygen'
    'rocm-cmake'
    'rocm-llvm'
    'rocm-toolchain'
)
_git='https://github.com/ROCmSoftwarePlatform/rocWMMA'
source=("$pkgname-$pkgver.tar.gz::$_git/archive/rocm-$pkgver.tar.gz")
sha256sums=('205b732aa2ab9ece8240a6eba5f99cb977db397a893e3dcb98c5b4384c8cc064')
_dirname="$(basename "$_git")-$(basename "${source[0]}" .tar.gz)"
options=(!lto)

build() {
    local cmake_args=(
        -Wno-dev
        -B build
        -S "$_dirname"
        -D CMAKE_POLICY_VERSION_MINIMUM=3.5
        -D CMAKE_BUILD_TYPE=None
        -D CMAKE_CXX_COMPILER=amdclang++
        -D CMAKE_INSTALL_PREFIX=/opt/rocm
        -D ROCWMMA_BUILD_TESTS=OFF
        -D ROCWMMA_BUILD_SAMPLES=OFF
        -D ROCM_SYMLINK_LIBS=OFF
        -D HIP_PLATFORM=amd
        -D CMAKE_CXX_FLAGS="${CXXFLAGS} -fcf-protection=none"
        -D GPU_TARGETS=$(rocm-supported-gfx)
    )
    cmake "${cmake_args[@]}"
    cmake --build build
}

package() {
    DESTDIR="$pkgdir" cmake --install build

    install -Dm644 "$_dirname/LICENSE.md" "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
