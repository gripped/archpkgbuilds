# Maintainer: kpcyrd <kpcyrd[at]archlinux[dot]org>

pkgname=zizmor
pkgver=1.2.2
pkgrel=1
pkgdesc="A static analysis tool for GitHub Actions"
url='https://github.com/woodruffw/zizmor'
arch=('x86_64')
license=('MIT')
depends=(
  'gcc-libs'
  'glibc'
)
makedepends=(
  'cargo'
)
options=(!lto)
source=(https://github.com/woodruffw/${pkgname}/archive/v${pkgver}/${pkgname}-${pkgver}.tar.gz)
sha256sums=('257ff8b1bf203d329d719db651a7b1c6847ef572c0e3d714fb0d642ff094f13a')
b2sums=('b814df339d02f25a9a9ef59de6c747e6ff89e90ed8f07cd42f799ea5895ede6e3b2cb9e3d0bad8c074867235cf3eaf7d7c7243322143c014973e683495f5cae4')

prepare() {
  cd "${pkgname}-${pkgver}"
  cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
  cd ${pkgname}-${pkgver}
  cargo build --frozen --release
}

check() {
  cd ${pkgname}-${pkgver}
  cargo test --frozen
  target/release/zizmor --help
  cat > action.yaml <<YAML
on: push
jobs:
  vulnerable:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout
        uses: actions/checkout@v4
YAML
  target/release/zizmor --format plain ./action.yaml | grep -q 'does not set persist-credentials: false'
}

package() {
  cd ${pkgname}-${pkgver}
  install -Dm 755 -t "${pkgdir}/usr/bin" \
    target/release/zizmor

  install -Dm 644 LICENSE -t "${pkgdir}/usr/share/licenses/${pkgname}"
}

# vim: ts=2 sw=2 et:
