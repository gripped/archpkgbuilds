pkgname=rime-emoji
pkgver=0.0.0.20250401
_commit=3dd83a264b4686b56abddedecbde75360cbbbfab
pkgrel=1
pkgdesc="Emoji support for rime"
arch=('any')
url="https://github.com/rime/rime-emoji"
license=('LGPL')
makedepends=('git')
source=("git+https://github.com/rime/rime-emoji.git#commit=$_commit")
sha512sums=('c8cf5057acd959cdacacb7c76928358a965cc887342a0025ce914f8b38d9f2bf49e8d8fd28cd1b2f55b81744075796e705725f6f4be16c7685457e3c701617e0')

package() {
  cd $pkgname
  install -Dm644 emoji_suggestion.yaml -t "$pkgdir"/usr/share/rime-data/
  install -Dm644 opencc/* -t "$pkgdir"/usr/share/rime-data/opencc/
}
