# Maintainer: Caleb Maclennan <caleb@alerque.com>

pkgname=markdown-oxide
pkgver=0.25.10
pkgrel=1
pkgdesc='PKM oriented Markdown Language Server with Obsidian syntax support'
arch=(x86_64)
url="https://github.com/Feel-ix-343/$pkgname"
license=(Apache-2.0)
depends=(gcc-libs
         glibc)
makedepends=(cargo)
_archive="$pkgname-$pkgver"
source=("$url/archive/v$pkgver/$_archive.tar.gz")
sha256sums=('67217dc2f460a21bf64493d2ebe860cb93563a62aa5eecc28c24cf38ee7100ed')

prepare() {
	cd "$_archive"
	cargo fetch --locked --target "$(rustc -vV | sed -n 's/host: //p')"
}

build() {
	cd "$_archive"
	cargo build --release --frozen
}

package() {
	cd "$_archive"
	install -Dm0755 -t "$pkgdir/usr/bin/" "target/release/$pkgname"
	install -Dm0644 -t "$pkgdir/usr/share/licenses/$pkgname/" LICENSE
}

