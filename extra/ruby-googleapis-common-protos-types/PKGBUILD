# Maintainer: Andreas 'Segaja' Schleifer <segaja at archlinux dot org>

_gemname='googleapis-common-protos-types'
pkgname="ruby-${_gemname}"
pkgver=1.22.0
pkgrel=1
pkgdesc='Common protocol buffer types used by Google APIs'
arch=('any')
url="https://github.com/googleapis/common-protos-ruby"
license=('Apache-2.0')
depends=(
  ruby
  ruby-google-protobuf
)
makedepends=(
  ruby-rdoc
)
options=('!emptydirs')
source=("${url}/archive/${_gemname}%2Fv${pkgver}/${pkgname}-${pkgver}.tar.gz")
sha512sums=('8f0256cf8b526c4f0f585c26d15c88dece82113a19ebf164fc939c9ab7b294c11887331625e3ed70cc671a2622f04807e144b0dc998bff40a9b365e82e2535b5')
b2sums=('aedc0eb4d5fd51ec0890a728ed5a3c78a1b1879ab6c26e4739e6b72c29bf431450a6a91f05aff3a4fdd9e4c8ff5c6fdad7b029c3d01f2f218fb65de526b45bc4')

prepare() {
  cd "common-protos-ruby-${_gemname}-v${pkgver}/${_gemname}"

  # update gemspec/Gemfile to allow newer version of the dependencies
  sed --in-place --regexp-extended 's|~>|>=|g' "${_gemname}.gemspec"
}

build() {
  cd "common-protos-ruby-${_gemname}-v${pkgver}/${_gemname}"

  local _gemdir="$(gem env gemdir)"

  gem build --verbose "${_gemname}.gemspec"

  gem install \
    --local \
    --verbose \
    --ignore-dependencies \
    --no-user-install \
    --install-dir "tmp_install${_gemdir}" \
    --bindir "tmp_install/usr/bin" \
    "${_gemname}-${pkgver}.gem"

  # remove unreproducible files
  rm --force --recursive --verbose \
    "tmp_install${_gemdir}/cache/" \
    "tmp_install${_gemdir}/gems/${_gemname}-${pkgver}/vendor/" \
    "tmp_install${_gemdir}/doc/${_gemname}-${pkgver}/ri/ext/"

  find "tmp_install${_gemdir}/gems/" \
    -type f \
    \( \
      -iname "*.o" -o \
      -iname "*.c" -o \
      -iname "*.so" -o \
      -iname "*.time" -o \
      -iname "gem.build_complete" -o \
      -iname "Makefile" \
    \) \
    -delete

  find "tmp_install${_gemdir}/extensions/" \
    -type f \
    \( \
      -iname "mkmf.log" -o \
      -iname "gem_make.out" \
    \) \
    -delete
}

package() {
  cd "common-protos-ruby-${_gemname}-v${pkgver}/${_gemname}"

  cp --archive --verbose tmp_install/* "${pkgdir}"

  install --verbose -D --mode=0644 ../LICENSE --target-directory "${pkgdir}/usr/share/licenses/${pkgname}"
  install --verbose -D --mode=0644 *.md --target-directory "${pkgdir}/usr/share/doc/${pkgname}"
}

