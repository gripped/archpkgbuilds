# Maintainer: Orhun ParmaksÄ±z <orhun@archlinux.org>

pkgname=binsider
pkgver=0.3.2
pkgrel=1
pkgdesc="A TUI for analyzing binaries like a boss"
arch=('x86_64')
url="https://github.com/orhun/binsider"
license=('MIT' 'Apache-2.0')
depends=('gcc-libs')
makedepends=('cargo')
source=("$pkgname-$pkgver.tar.gz::$url/archive/v$pkgver.tar.gz")
sha512sums=('db0249dfb1a7e63f9624a12978dd4f7e8840add978867cf31985034a69e35ccbee6339da45156b1675b1f33ea3ef0dc257d35d5728ec0c427bed891b80d0e02e')

prepare() {
  cd "$pkgname-$pkgver"
  cargo fetch --locked --target "$(rustc --print host-tuple)"
}

build() {
  cd "$pkgname-$pkgver"
  cargo build --release --frozen
}

check() {
  cd "$pkgname-$pkgver"
  cargo test --frozen --lib
}

package() {
  cd "$pkgname-$pkgver"
  install -Dm 755 "target/release/$pkgname" -t "$pkgdir/usr/bin"
  install -Dm 644 README.md -t "$pkgdir/usr/share/doc/$pkgname"
  install -Dm 644 LICENSE-MIT -t "$pkgdir/usr/share/licenses/$pkgname"
}

# vim: ts=2 sw=2 et:
