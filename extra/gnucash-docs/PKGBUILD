pkgname=gnucash-docs
pkgver=5.14
pkgrel=1
pkgdesc='Documentation for GnuCash'
arch=('any')
url='https://gnucash.org/docs.phtml'
license=('GFDL-1.1-only')
depends=('yelp')
makedepends=('cmake')
source=(https://downloads.sourceforge.net/gnucash/$pkgname-$pkgver.tar.gz)
sha256sums=('62f6f64b06ac1fe4c00efe5138a2fd1adc77c18223e88878d27ecc02df680588')

prepare() {
  cd $pkgname-$pkgver
  mkdir build
}


build() {
  cd $pkgname-$pkgver/build

  cmake \
    -DCMAKE_INSTALL_PREFIX=/usr \
    ..
  make
}

package() {
  cd $pkgname-$pkgver/build
  make DESTDIR="${pkgdir}" install
}
